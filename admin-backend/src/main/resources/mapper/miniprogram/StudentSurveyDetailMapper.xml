<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.education.admin.modules.miniprogram.mapper.StudentSurveyDetailMapper">
  <resultMap id="BaseResultMap" type="com.education.admin.modules.miniprogram.entity.StudentSurveyDetail">
    <id property="id" column="id"/>
    <result property="teacherId" column="teacher_id"/>
    <result property="studentId" column="student_id"/>
    <result property="dataJson" column="data_json"/>
    <result property="filesJson" column="files_json"/>
    <result property="createTime" column="create_time"/>
    <result property="updateTime" column="update_time"/>
  </resultMap>

  <insert id="insert" parameterType="com.education.admin.modules.miniprogram.entity.StudentSurveyDetail" useGeneratedKeys="true" keyProperty="id">
    insert into student_survey_detail(teacher_id, student_id, data_json, files_json, create_time, update_time)
    values(#{teacherId}, #{studentId}, #{dataJson}, #{filesJson}, now(), now())
  </insert>

  <select id="findById" parameterType="long" resultMap="BaseResultMap">
    select * from student_survey_detail where id = #{id}
  </select>

  <select id="findLatestByStudentId" resultMap="BaseResultMap">
    select * from student_survey_detail 
    where student_id = #{studentId}
    order by create_time desc
    limit 1
  </select>
</mapper>
