andleSearch\">查询</el-button>\r\n              <el-button @click=\"handleReset\">重置</el-button>\r\n            </el-form-item>\r\n          </el-form>\r\n        </div>\r\n\r\n        <el-table :data=\"requestList\" style=\"width: 100%\" v-loading=\"loading\">\r\n          <el-table-column prop=\"id\" label=\"申请ID\" width=\"80\" />\r\n          <el-table-column prop=\"applicant\" label=\"申请人\" min-width=\"120\" />\r\n          <el-table-column prop=\"type\" label=\"申请类型\" width=\"120\" />\r\n          <el-table-column prop=\"course\" label=\"相关课程\" min-width=\"150\" />\r\n          <el-table-column prop=\"reason\" label=\"申请原因\" min-width=\"200\" show-overflow-tooltip />\r\n          <el-table-column prop=\"applyTime\" label=\"申请时间\" width=\"160\" />\r\n          <el-table-column prop=\"status\" label=\"状态\" width=\"100\">\r\n            <template slot-scope=\"scope\">\r\n              <el-tag :type=\"getStatusType(scope.row.status)\">\r\n                {{ getStatusText(scope.row.status) }}\r\n              </el-tag>\r\n            </template>\r\n          </el-table-column>\r\n          <el-table-column label=\"操作\" width=\"200\" fixed=\"right\">\r\n            <template slot-scope=\"scope\">\r\n              <el-button \r\n                type=\"text\" \r\n                size=\"small\" \r\n                @click=\"handleApprove(scope.row)\"\r\n                v-if=\"scope.row.status === 0\"\r\n              >\r\n                通过\r\n              </el-button>\r\n              <el-button \r\n                type=\"text\" \r\n                size=\"small\" \r\n                style=\"color: #f56c6c\"\r\n                @click=\"handleReject(scope.row)\"\r\n                v-if=\"scope.row.status === 0\"\r\n              >\r\n                拒绝\r\n              </el-button>\r\n              <el-button type=\"text\" size=\"small\" @click=\"handleView(scope.row)\">\r\n                查看详情\r\n              </el-button>\r\n            </template>\r\n          </el-tabl