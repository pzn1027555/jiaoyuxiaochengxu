andleApprove(row) {\r\n      this.$confirm(`确定要通过\"${row.applicant}\"的申请吗？`, '提示', {\r\n        confirmButtonText: '确定',\r\n        cancelButtonText: '取消',\r\n        type: 'success'\r\n      }).then(() => {\r\n        row.status = 1\r\n        this.$message.success('审核通过')\r\n      })\r\n    },\r\n    handleReject(row) {\r\n      this.$confirm(`确定要拒绝\"${row.applicant}\"的申请吗？`, '提示', {\r\n        confirmButtonText: '确定',\r\n        cancelButtonText: '取消',\r\n        type: 'warning'\r\n      }).then(() => {\r\n        row.status = 2\r\n        this.$message.success('已拒绝申请')\r\n      })\r\n    },\r\n    handleView(row) {\r\n      this.$message.info(`查看申请详情：${row.applicant}`)\r\n    },\r\n    handleSizeChange(val) {\r\n      this.pagination.pageSize = val\r\n      this.handleSearch()\r\n    },\r\n    handleCurrentChange(val) {\r\n      this.pagination.current = val\r\n      this.handleSearch()\r\n    },\r\n    getStatusType(status) {\r\n      const statusMap = {\r\n        0: 'warning',\r\n        1: 'success',\r\n        2: 'danger'\r\n      }\r\n      return statusMap[status] || 'info'\r\n    },\r\n    getStatusText(status) {\r\n      const statusMap = {\r\n        0: '待审核',\r\n        1: '已通过',\r\n        2: '已拒绝'\r\n      }\r\n      return statusMap[status] || '未知'\r\n    }\r\n  },\r\n  mounted() {\r\n    this.handleSearch()\r\n  }\r\n}\r\n</script>\r\n\r\n<style scoped>\r\n.leave-request-container {\r\n  padding: 20px;\r\n}\r\n\r\n.header {\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.header h2 {\r\n  margin: 0;\r\n  color: #303133;\r\n}\r\n\r\n.filter-section {\r\n  margin-bottom: 20px;\r\n}\r\n\r\n.pagination {\r\n  margin-top: 20px;\r\n  text-align: right;\r\n}\r\n</style>"],"mappings":"AAoFA;EACAA,IAAA;EACAC,KAAA;IACA;MACAC,OAAA;MACAC,UAAA;QACAC,SAAA;QACAC,MAAA;MACA;MACAC,WAAA,GACA;QACAC,EAAA;QACAH,SAAA;QACAI,IAAA;QACAC,MAAA;QACAC,MAAA;QACAC,SAAA;QACAN,MAAA;MACA,GACA;QACAE,EAAA;QACAH,SAAA;QACAI,IAAA;QACAC,MAAA;QACAC,MAAA;QACAC,SAAA;QACAN,MAAA;MACA,GACA;QACAE,EAAA;QA