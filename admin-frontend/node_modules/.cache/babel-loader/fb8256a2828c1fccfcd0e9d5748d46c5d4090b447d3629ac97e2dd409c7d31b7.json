{"ast":null,"code":"export default {\n  name: 'LeaveRequest',\n  data() {\n    return {\n      loading: false,\n      searchForm: {\n        applicant: '',\n        status: ''\n      },\n      requestList: [{\n        id: 1,\n        applicant: '张老师',\n        type: '网课申请',\n        course: '高二数学提高班',\n        reason: '学生基础较弱，需要调整为网课形式',\n        applyTime: '2024-07-15 10:30:00',\n        status: 0\n      }, {\n        id: 2,\n        applicant: '李老师',\n        type: '模考申请',\n        course: '高一英语基础班',\n        reason: '准备期中模拟考试',\n        applyTime: '2024-07-14 14:20:00',\n        status: 1\n      }, {\n        id: 3,\n        applicant: '王老师',\n        type: '评价申请',\n        course: '初三物理竞赛班',\n        reason: '学期末综合评价',\n        applyTime: '2024-07-13 09:15:00',\n        status: 2\n      }],\n      pagination: {\n        current: 1,\n        pageSize: 10,\n        total: 3\n      }\n    };\n  },\n  methods: {\n    handleSearch() {\n      this.loading = true;\n      setTimeout(() => {\n        this.loading = false;\n        this.$message.success('搜索完成');\n      }, 1000);\n    },\n    handleReset() {\n      this.searchForm = {\n        applicant: '',\n        status: ''\n      };\n      this.handleSearch();\n    },\n    handleApprove(row) {\n      this.$confirm(`确定要通过\"${row.applicant}\"的申请吗？`, '提示', {\n        confirmButtonText: '确定',\n        cancelButtonText: '取消',\n        type: 'success'\n      }).then(() => {\n        row.status = 1;\n        this.$message.success('审核通过');\n      });\n    },\n    handleReject(row) {\n      this.$confirm(`确定要拒绝\"${row.applicant}\"的申请吗？`, '提示', {\n        confirmButtonText: '确定',\n        cancelButtonText: '取消',\n        type: 'warning'\n      }).then(() => {\n        row.status = 2;\n        this.$message.success('已拒绝申请');\n      });\n    },\n    handleView(row) {\n      this.$message.info(`查看申请详情：${row.applicant}`);\n    },\n    handleSizeChange(val) {\n      this.pagination.pageSize = val;\n      this.handleSearch();\n    },