rd class=\"tool-card\">\r\n          <div slot=\"header\">\r\n            <span>内容管理</span>\r\n          </div>\r\n          <el-row :gutter=\"20\">\r\n            <el-col :span=\"8\">\r\n              <div class=\"tool-item\">\r\n                <el-button type=\"primary\" icon=\"el-icon-edit\" @click=\"handleBanner\">\r\n                  轮播图管理\r\n                </el-button>\r\n              </div>\r\n            </el-col>\r\n            <el-col :span=\"8\">\r\n              <div class=\"tool-item\">\r\n                <el-button type=\"success\" icon=\"el-icon-document\" @click=\"handleArticle\">\r\n                  文章管理\r\n                </el-button>\r\n              </div>\r\n            </el-col>\r\n            <el-col :span=\"8\">\r\n              <div class=\"tool-item\">\r\n                <el-button type=\"warning\" icon=\"el-icon-chat-dot-round\" @click=\"handleFaq\">\r\n                  FAQ管理\r\n                </el-button>\r\n              </div>\r\n            </el-col>\r\n          </el-row>\r\n        </el-card>\r\n      </div>\r\n    </div>\r\n  </Layout>\r\n</template>\r\n\r\n<script>\r\nimport Layout from '@/components/Layout.vue'\r\n\r\nexport default {\r\n  name: 'Operation',\r\n  components: {\r\n    Layout\r\n  },\r\n  data() {\r\n    return {\r\n      userGrowth: {\r\n        today: 156,\r\n        total: 12500\r\n      },\r\n      courseSales: {\r\n        today: '25,680',\r\n        orders: 89\r\n      },\r\n      teacherActivity: {\r\n        active: 45,\r\n        rate: 78.5\r\n      },\r\n      studyTime: {\r\n        total: 3580,\r\n        average: 2.5\r\n      }\r\n    }\r\n  },\r\n  methods: {\r\n    openPromotionDialog() {\r\n      this.$message.info('促销活动功能开发中...')\r\n    },\r\n    \r\n    openNotificationDialog() {\r\n      this.$message.info('通知功能开发中...')\r\n    },\r\n    \r\n    openReportDialog() {\r\n      this.$message.info('报表功能开发中...')\r\n    },\r\n    \r\n    openAnalyticsDialog() {\r\n      this.$message.info('数据分析功能开