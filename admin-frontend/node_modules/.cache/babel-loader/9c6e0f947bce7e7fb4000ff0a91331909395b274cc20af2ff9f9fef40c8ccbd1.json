{"ast":null,"code":"import HorizontalMenu from './HorizontalMenu.vue';\nimport { findMenuByPath } from '@/config/menus';\nexport default {\n  name: 'HorizontalLayout',\n  components: {\n    HorizontalMenu\n  },\n  data() {\n    return {\n      showBreadcrumb: true\n    };\n  },\n  computed: {\n    userInfo() {\n      return this.$store.getters.getUser || {\n        username: 'Admin',\n        nickname: '管理员'\n      };\n    },\n    breadcrumbData() {\n      const menuInfo = findMenuByPath(this.$route.path);\n      return menuInfo || {\n        parent: null,\n        current: null\n      };\n    }\n  },\n  methods: {\n    handleUserCommand(command) {\n      switch (command) {\n        case 'profile':\n          this.$message.info('个人设置功能开发中...');\n          break;\n        case 'logout':\n          this.handleLogout();\n          break;\n      }\n    },\n    handleLogout() {\n      this.$confirm('确定要退出登录吗？', '提示', {\n        confirmButtonText: '确定',\n        cancelButtonText: '取消',\n        type: 'warning'\n      }).then(() => {\n        this.$store.dispatch('logout');\n        this.$message.success('退出登录成功');\n        this.$router.push('/login');\n      }).catch(() => {\n        // 取消操作\n      });\n    }\n  }\n};","map":{"version":3,"names":["HorizontalMenu","findMenuByPath","name","components","data","showBreadcrumb","computed","userInfo","$store","getters","getUser","username","nickname","breadcrumbData","menuInfo","$route","path","parent","current","methods","handleUserCommand","command","$message","info","handleLogout","$confirm","confirmButtonText","cancelButtonText","type","then","dispatch","success","$router","push","catch"],"sources":["src/components/HorizontalLayout.vue"],"sourcesContent":["<template>\r\n  <div class=\"horizontal-layout\">\r\n    <!-- 顶部导航栏 -->\r\n    <div class=\"layout-header\">\r\n      <!-- 品牌区域 -->\r\n      <div class=\"brand-area\">\r\n        <div class=\"logo\">\r\n          <i class=\"el-icon-reading\" />\r\n          <span class=\"