mb-item v-if=\"breadcrumbData.current\">\r\n            {{ breadcrumbData.current.name }}\r\n          </el-breadcrumb-item>\r\n        </el-breadcrumb>\r\n        \r\n        <!-- 页面操作按钮 -->\r\n        <div class=\"page-actions\">\r\n          <slot name=\"page-actions\" />\r\n        </div>\r\n      </div>\r\n    </div>\r\n    \r\n    <!-- 主内容区域 -->\r\n    <div class=\"layout-main\">\r\n      <div class=\"main-container\">\r\n        <!-- 页面内容 -->\r\n        <div class=\"page-content\">\r\n          <slot />\r\n        </div>\r\n        \r\n        <!-- 页面底部 -->\r\n        <div class=\"layout-footer\">\r\n          <div class=\"footer-content\">\r\n            <span>© 2024 教育管理系统平台 - 专注于教育科技创新</span>\r\n            <div class=\"footer-links\">\r\n              <a href=\"#\" class=\"footer-link\">帮助中心</a>\r\n              <a href=\"#\" class=\"footer-link\">隐私政策</a>\r\n              <a href=\"#\" class=\"footer-link\">服务条款</a>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nimport HorizontalMenu from './HorizontalMenu.vue'\r\nimport { findMenuByPath } from '@/config/menus'\r\n\r\nexport default {\r\n  name: 'HorizontalLayout',\r\n  components: {\r\n    HorizontalMenu\r\n  },\r\n  data() {\r\n    return {\r\n      showBreadcrumb: true\r\n    }\r\n  },\r\n  computed: {\r\n    userInfo() {\r\n      return this.$store.getters.getUser || { username: 'Admin', nickname: '管理员' }\r\n    },\r\n    breadcrumbData() {\r\n      const menuInfo = findMenuByPath(this.$route.path)\r\n      return menuInfo || { parent: null, current: null }\r\n    }\r\n  },\r\n  methods: {\r\n    handleUserCommand(command) {\r\n      switch (command) {\r\n        case 'profile':\r\n          this.$message.info('个人设置功能开发中...')\r\n          break\r\n        case 'logout':\r\n          this.handleLogout()\r\n          break\r\n      }\r\n    },\r\n    \r\n    handleLogout() {\r\n      this.$confirm('确定要退出登录吗？', '提示'