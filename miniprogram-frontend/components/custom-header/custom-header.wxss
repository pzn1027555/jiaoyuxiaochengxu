/* 通用顶部导航组件样式 */
.custom-header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: #fff;
  border-bottom: 1rpx solid #e5e5e5;
  z-index: 9999;
}

/* 状态栏占位 */
.status-bar {
  width: 100%;
  background-color: #fff;
}

/* 导航栏内容 */
.header-content {
  display: flex;
  align-items: center;
  justify-content: space-between;
  height: 88rpx;
  padding: 0 32rpx;
  background-color: #fff;
}

.header-left {
  display: flex;
  align-items: center;
  width: 120rpx;
  justify-content: flex-start;
}

.back-icon {
  width: 36rpx;
  height: 36rpx;
  padding: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  transition: background-color 0.3s ease;
  opacity: 0.8;
}

.back-icon:active {
  background-color: #f0f0f0;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  flex: 1;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.header-right {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  width: 120rpx;
}
