.subject-picker-mask {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  justify-content: center;
  align-items: flex-end;
  z-index: 1000;
}

.subject-picker-panel {
  width: 100%;
  max-height: 80vh;
  background: #fff;
  border-top-left-radius: 24rpx;
  border-top-right-radius: 24rpx;
  display: flex;
  flex-direction: column;
}

.subject-picker-header {
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  padding: 28rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.subject-picker-header .title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.subject-picker-header .close {
  position: absolute;
  right: 32rpx;
  font-size: 32rpx;
  color: #999;
}

.subject-picker-content {
  flex: 1;
  padding: 16rpx 24rpx 24rpx 24rpx;
  overflow:auto;
}

/* 隐藏纵向滚动条（各端兼容尽量） */
.subject-picker-content::-webkit-scrollbar { width: 0; height: 0; display: none; }
.subject-picker-content { scrollbar-width: none; -ms-overflow-style: none; }

.subject-group {
  margin-bottom: 24rpx;
}

.subject-group:last-child {
  margin-bottom: 0;
}

.group-title {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.group-body {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.subject-item {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  background: #f5f6f7;
  color: #666;
  font-size: 26rpx;
  border: 1rpx solid transparent;
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.subject-item .check {
  color: #4CAF50;
  font-weight: 600;
}

.subject-item.selected {
  background: #e8f5e8;
  border-color: #4CAF50;
  color: #2F8B3C;
}

.empty {
  text-align: center;
  color: #9aa19f;
  padding: 40rpx 0;
}

.subject-picker-footer {
  display: flex;
  gap: 24rpx;
  padding: 20rpx 24rpx calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid #f0f0f0;
}

.subject-picker-footer .btn {
  flex: 1;
  border-radius: 999px;
  border: 1rpx solid #4CAF50;
  font-size: 30rpx;
}

.subject-picker-footer .btn.cancel {
  background: #fff;
  color: #4CAF50;
}

.subject-picker-footer .btn.confirm {
  background: #4CAF50;
  color: #fff;
}

