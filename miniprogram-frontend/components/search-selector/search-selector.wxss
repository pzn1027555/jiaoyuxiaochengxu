/* components/search-selector/search-selector.wxss */

.search-selector-container {
  position: relative;
}

/* 遮罩层 */
.selector-mask {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.selector-mask.show {
  opacity: 1;
  visibility: visible;
}

/* 弹窗 */
.selector-popup {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  max-height: 80vh;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  z-index: 1000;
  transform: translateY(100%);
  transition: transform 0.3s ease;
  display: flex;
  flex-direction: column;
}

.selector-popup.show {
  transform: translateY(0);
}

/* 头部 */
.selector-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 32rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;
}

.selector-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.close-btn {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #f5f5f5;
  border-radius: 50%;
  font-size: 32rpx;
  color: #666;
}

/* 搜索框 */
.search-section {
  padding: 24rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  flex-shrink: 0;
}

.search-input-wrapper {
  position: relative;
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 20rpx;
  padding: 0 40rpx;
  height: 80rpx;
}

.search-input {
  flex: 1;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
  outline: none;
}

.search-icon {
  font-size: 28rpx;
  color: #999;
  margin-right: 16rpx;
}

.clear-btn {
  width: 40rpx;
  height: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: #ccc;
  border-radius: 50%;
  font-size: 24rpx;
  color: #fff;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.clear-btn.show {
  opacity: 1;
  visibility: visible;
}

/* 选项列表 */
.options-list {
  flex: 1;
  overflow: hidden;
}

.option-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 40rpx;
  border-bottom: 1rpx solid #f5f5f5;
  transition: background-color 0.2s ease;
}

.option-item:active {
  background: #f8f8f8;
}

.option-item.selected {
  background: #f0f8ff;
}

.option-text {
  font-size: 30rpx;
  color: #333;
  flex: 1;
}

.option-item.selected .option-text {
  color: #007aff;
  font-weight: 500;
}

.check-icon {
  font-size: 32rpx;
  color: #007aff;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.check-icon.show {
  opacity: 1;
  visibility: visible;
}

/* 无数据提示 */
.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 120rpx 40rpx;
  color: #999;
  font-size: 28rpx;
}

/* 底部按钮 */
.selector-footer {
  display: flex;
  padding: 24rpx 40rpx;
  border-top: 1rpx solid #eee;
  gap: 24rpx;
  flex-shrink: 0;
}

.cancel-btn, .confirm-btn {
  flex: 1;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 30rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.cancel-btn {
  background: #f5f5f5;
  color: #666;
}

.confirm-btn {
  background: #007aff;
  color: #fff;
}

.cancel-btn:active {
  background: #e8e8e8;
}

.confirm-btn:active {
  background: #0056cc;
}
