/* components/badge-indicator/badge-indicator.wxss */

.badge-indicator {
  position: absolute;
  background: #ff4757;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(255, 71, 87, 0.3);
  z-index: 10;
}

/* 小尺寸红点 */
.badge-small {
  min-width: 16rpx;
  height: 16rpx;
  top: -4rpx;
  right: -4rpx;
}

.badge-small .badge-text {
  font-size: 16rpx;
  padding: 0 4rpx;
}

/* 中等尺寸红点 */
.badge-medium {
  min-width: 32rpx;
  height: 32rpx;
  top: -8rpx;
  right: -8rpx;
}

.badge-medium .badge-text {
  font-size: 20rpx;
  padding: 0 8rpx;
}

/* 大尺寸红点 */
.badge-large {
  min-width: 40rpx;
  height: 40rpx;
  top: -10rpx;
  right: -10rpx;
}

.badge-large .badge-text {
  font-size: 24rpx;
  padding: 0 10rpx;
}

/* 文本样式 */
.badge-text {
  line-height: 1;
}

/* 当没有数字时，保持圆形 */
.badge-indicator:not(:has(.badge-text)) {
  border-radius: 50%;
}

