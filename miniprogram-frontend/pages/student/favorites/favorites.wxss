/* pages/student/favorites/favorites.wxss */

.favorites-page { min-height: 100vh; background: linear-gradient(0, #ffffff, #F5FFF2); padding-bottom: 140rpx; display:flex; flex-direction:column; }

/* 标签页切换 */
.tab-container {
  /* background: #ffffff; */
  /* box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.1); */
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
  position: sticky;
  top: 0;
  z-index: 10;
}

.tab-bar {
  display: flex;
  align-items: center;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 28rpx 0;
  font-size: 30rpx;
  color: #666;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #54B247;
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  left: 50%;
  bottom: 0;
  width: 60rpx;
  height: 6rpx;
  background: #54B247;
  border-radius: 3rpx;
  transform: translateX(-50%);
}

/* 内容容器 */
.content-container { padding: 20rpx 0; overflow:auto; -webkit-overflow-scrolling: touch; }

/* 教师卡片样式 - 参考teacher-card */
.teacher-list {
  padding: 0 24rpx;
}

.teacher-card {
  /* background: #ffffff; */
  /* border: 1rpx solid #54B247; */
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  /* box-shadow: 0 4rpx 12rpx rgba(84, 178, 71, 0.1); */
}

.card-row {
  display: flex;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 12rpx;
  margin-right: 18rpx;
  background: #e9f4e8;
  flex-shrink: 0;
}

.content-right {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.title-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 8rpx;
}

.name {
  font-size: 36rpx;
  font-weight: 700;
  color: #183314;
}

.gender-icon {
  width: 26rpx;
  height: 26rpx;
}

.district {
  margin-left: auto;
  color: #597259;
  font-size: 24rpx;
}

.tag-row {
  display: flex;
  gap: 10rpx;
  /* margin-bottom: 12rpx; */
  flex-wrap: wrap;
}

.badge {
  background: #e6f6e6;
  color: #2f8b3c;
  padding: 6rpx 12rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
}

.subjects {
  margin: 10rpx 0;
  font-size: 26rpx;
  color: #597259;
}

.subjects-strong {
  font-weight: 700;
  color: #183314;
}

.desc {
  color: #6a806a;
  font-size: 24rpx;
  margin-top: 6rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.price-row {
  display: flex;
  justify-content: flex-start;
  align-items: center;
  margin-top: 12rpx;
}

.price {
  font-size: 28rpx;
  color: #597259;
}

.price-num {
  color: #ff6655;
  font-size: 36rpx;
  font-weight: 700;
}

.price-unit {
  color: #597259;
}

.stats-row {
  display: flex;
  gap: 24rpx;
  flex-wrap: wrap;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  min-width: 80rpx;
}

.stat-label {
  font-size: 20rpx;
  color: #889a88;
  margin-bottom: 4rpx;
}

.stat-value {
  font-size: 24rpx;
  color: #54B247;
  font-weight: 600;
}

/* 帖子卡片样式 - 参考community post-card */
.post-list {
  padding: 0 24rpx;
}

.post-card {
  /* background: #ffffff; */
  border-radius: 16rpx;
  padding: 24rpx;
  /* box-shadow: 0 6rpx 24rpx rgba(0,0,0,.06); */
  margin-bottom: 24rpx;
  position: relative;
}

.post-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.post-header .avatar {
  width: 72rpx;
  height: 72rpx;
  border-radius: 50%;
  background: #f0f0f0;
  margin-right: 16rpx;
}

.meta {
  flex: 1;
}

.name-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
  margin-bottom: 6rpx;
}

.author {
  font-size: 28rpx;
  color: #111;
  font-weight: 600;
}

.gender {
  width: 26rpx;
  height: 26rpx;
}

.sub {
  font-size: 22rpx;
  color: #999;
}

.post-text {
  font-size: 28rpx;
  color: #333;
  line-height: 1.7;
  margin-bottom: 12rpx;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.media-row {
  display: flex;
  gap: 8rpx;
  margin-bottom: 16rpx;
  flex-wrap: wrap;
}

.media-img {
  width: 32%;
  height: 220rpx;
  border-radius: 8rpx;
  background: #eee;
}

.post-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #666;
  margin-bottom: 12rpx;
}

.time {
  color: #889a88;
  font-size: 22rpx;
}

.actions {
  display: flex;
  gap: 24rpx;
}

.act {
  display: inline-flex;
  align-items: center;
  color: #667;
  font-size: 24rpx;
}

.act.liked {
  color: #54B247;
}

.small-icon {
  width: 28rpx;
  height: 28rpx;
  margin-right: 8rpx;
}

.like-date {
  font-size: 20rpx;
  color: #54B247;
  text-align: right;
  font-style: italic;
}

/* 空状态 */
.empty-state {
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 32rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
  display: block;
}

.empty-btn {
  display: inline-block;
  padding: 16rpx 32rpx;
  background: #54B247;
  color: #ffffff;
  border-radius: 40rpx;
  font-size: 26rpx;
}

/* 加载状态 */
.load-more,
.load-end {
  text-align: center;
  color: #888;
  padding: 24rpx 0;
  font-size: 24rpx;
}