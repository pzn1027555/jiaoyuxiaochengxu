/* pages/student/learning-center/learning-center.wxss */
@import "/styles/calendar.wxss";

.workspace-container { min-height: 100vh; padding-bottom: 140rpx; position: relative; }

/* 背景 */
.page-background { position: absolute; inset: 0; pointer-events: none; z-index: 0; }
.background-image { position: absolute; top: 0; left: 0; width: 100%; opacity: 1; }
.character-decoration { position: absolute; top: 40rpx; right: 40rpx; width: 200rpx; height: 200rpx; background: rgba(255,255,255,0.1); border-radius: 50%; }

/* 日历 */
.calendar-section { padding: 40rpx 20rpx; position: relative; z-index: 1; }
.calendar-header { margin-bottom: 10rpx; }
.calendar-title { font-size: 36rpx; font-weight: 700; color: #183314; letter-spacing: 2rpx; margin-left: 18rpx; }
.calendar-week { background:#F5FFF2; border-radius:24rpx; padding:8rpx 15rpx; display:flex; align-items:center; justify-content:space-between; box-shadow:0 8rpx 24rpx rgba(0,0,0,0.08); width: calc(100% - 70rpx); margin-left: 25rpx; }
.week-scroll{ flex:1 }
.week-track{ display:flex }
.week-scroll::-webkit-scrollbar{ width:0; height:0; display:none }
.week-scroll{ scrollbar-width:none; -ms-overflow-style:none ;width:calc(100% - 68rpx) }
.week-item{ display:flex; flex-direction:column; align-items:center; padding:14rpx 10rpx; margin:0 10rpx; border-radius:20rpx; transition:all .3s; min-width:80rpx }
.week-item.selected{ background:rgba(232, 255, 229, 1); color:rgba(84, 178, 71, 1); border:2rpx dashed rgba(84, 178, 71, 1) }
.week-date{ font-size:28rpx; font-weight:600 }
.week-day{ font-size:26rpx; color:#666; margin-bottom:8rpx }
.week-item.selected .week-day{ color:rgba(84, 178, 71, 0.9) }
.week-dot{ width:12rpx; height:12rpx; border-radius:50%; background:#e0e0e0 }
.week-dot.active{ background:#4CAF50 }
.week-item.selected .week-dot.active{ background:rgba(84, 178, 71, 1) }
.calendar-icon{ display:flex; flex-direction:column; align-items:center; padding:0 20rpx; position:relative; width:40rpx }
.calendar-icon-img{ width:48rpx; height:48rpx; margin-bottom:8rpx }
.calendar-icon text{ font-size:28rpx; color:#666; margin-bottom:4rpx; text-align:center; width:60rpx }
.dropdown-arrow{ width:0; height:0; border-left:8rpx solid transparent; border-right:8rpx solid transparent; border-top:8rpx solid #999 }

/* 今日课程 */
.today-classes{ padding:30rpx 40rpx; position:relative; z-index:1; background:#fff; border-top-left-radius:40rpx; border-top-right-radius:40rpx }
.section-header{ display:flex; justify-content:space-between; align-items:center; margin-bottom:32rpx }
.section-title{ font-size:30rpx; font-weight:600; color:#333 }
.section-link{ display:flex; align-items:center; gap:8rpx; color:#4CAF50 }
.next-icon{ width:24rpx; height:24rpx }

.classes-timeline{ position:relative }
.timeline-axis{ position:absolute; left:14rpx; top:14rpx; bottom:-50rpx; width:2rpx; background:#e0e0e0; z-index:0 }
.class-item{ margin-bottom:32rpx; position:relative }
.class-item.completed>.timeline-axis{ background:#aed8a8 }
.class-time-line{ display:flex; align-items:flex-start; margin-bottom:16rpx; z-index:2; position:relative }
.time-dot{ width:24rpx; height:24rpx; border-radius:50%; flex-shrink:0; margin-right:24rpx; margin-top:14rpx; border:3rpx solid #fff; z-index:3 }
.pending-dot{ background:#999 }
.completed-dot{ background:#4CAF50 }
.time-content{ flex:1; display:flex; justify-content:space-between; align-items:center }
.time-info{ display:flex; align-items:center; gap:16rpx }
.class-time{ font-size:32rpx; font-weight:500; color:#333 }
.time-countdown{ font-size:28rpx; color:#f44336 }
.class-status-tag{ padding:8rpx 20rpx; border-radius:16rpx; font-size:28rpx; font-weight:500 }
.class-status-tag.pending{ background:#fff3cd; color:#856404 }
.class-status-tag.completed{ color:#999 }

.class-card{ background:#F4FFF2; border-radius:24rpx; overflow:hidden; margin-left:30rpx }
.class-main-info{ padding:20rpx; display:flex; justify-content:space-between; align-items:flex-start }
.class-cover-img{ width:260rpx; height:180rpx; border-radius:16rpx; margin-right:24rpx; flex-shrink:0 }
.class-details{ flex:1 }
.class-title{ font-size:32rpx; font-weight:600; color:#333; margin-bottom:12rpx; line-height:1.3 }
.class-tag{ display:inline-block; background:#e8f5e8; color:#4CAF50; padding:0 16rpx; border-radius:16rpx; font-size:24rpx; margin-bottom:16rpx; margin-left:16rpx }
.class-meta{ font-size:28rpx; color:#666; margin-bottom:16rpx }
.class-teacher{ display:flex; align-items:center; gap:12rpx }
.teacher-avatar-placeholder{ width:32rpx; height:32rpx; border-radius:50%; background:#e0e0e0 }
.teacher-name{ font-size:28rpx; color:#666 }
.class-actions{ display:flex; flex-direction:column; align-items:flex-end; position:absolute; right:20rpx; bottom:30rpx }
.action-btn{ padding:12rpx 24rpx; border-radius:24rpx; font-size:24rpx; border:none; min-width:120rpx; height:48rpx; display:flex; align-items:center; justify-content:center; transition:all .3s }
.feedback-btn{ background-color:#4CAF50; color:#fff }
.feedback-btn:active{ background-color:#e9ecef }
.view-feedback-btn{ background-color:#f8f9fa; color:#4CAF50; border:1rpx solid #4CAF50; border-radius:20rpx }
.view-feedback-btn:active{ background-color:#e9ecef }
.rv-card{ position:fixed; left:24rpx; right:24rpx; top:10%; background:#fff; border-radius:28rpx; z-index:1000; padding:40rpx 32rpx 32rpx; box-shadow:0 12rpx 36rpx rgba(0,0,0,0.1) }
.rv-emoji{ width:260rpx; height:260rpx; display:block; margin:10rpx auto 24rpx }
.rv-title{ text-align:center; font-size:40rpx; font-weight:700; color:#1a1a1a; margin-bottom:20rpx }
.rv-stars{ display:flex; justify-content:center; align-items:center; gap:30rpx; margin:10rpx 0 28rpx }
.rv-star{ font-size:56rpx; line-height:1; color:#cde9cd }
.rv-star.on{ color:#54B247 }
.rv-input{ width:100%; min-height:360rpx; border:2rpx solid #54B247; border-radius:18rpx; padding:18rpx; font-size:28rpx; box-sizing:border-box }
.rv-submit{ margin:32rpx auto 8rpx; width:88%; height:88rpx; background:#54B247; color:#fff; border:none; border-radius:44rpx; font-size:32rpx; display:flex; align-items:center; justify-content:center }
.rv-submit.ghost{ background:#f2f2f2; color:#333 }

.empty-classes{ display:flex; flex-direction:column; align-items:center; justify-content:center; padding:120rpx 40rpx }
.empty-icon-placeholder{ width:120rpx; height:120rpx; background:#e0e0e0; border-radius:16rpx; margin-bottom:32rpx; opacity:.5 }
.empty-text{ font-size:28rpx; color:#999 }

.mask{ position:fixed; left:0; right:0; top:0; bottom:0; background:rgba(0,0,0,0.4); z-index:998 }
.month-sheet{ position:fixed; left:12rpx; right:12rpx; bottom:40%; background:#fff; border-radius:24rpx; z-index:999; padding:16rpx 24rpx }
.ms-hd{ display:flex; align-items:center; justify-content:space-between; padding:12rpx 0 }
.ms-btn{ padding:0 16rpx; font-size:40rpx; color:#4CAF50 }
.ms-title{ font-weight:700; color:#333 }
/* 月历样式由 /styles/calendar.wxss 提供 */