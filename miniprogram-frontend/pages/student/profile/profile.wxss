/* pages/student/profile/profile.wxss */

.profile-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 140rpx;
  position: relative;
}

/* 背景渐变 */
.background-gradient { position: absolute; top: 0; left: 0; right: 0; height: 500rpx; background: linear-gradient(180deg, #7ED321 0%, #4CAF50 30%, rgba(255, 255, 255, 0) 100%); z-index: 0; }
.background-image { position: absolute; top: 0; left: 0; width: 100%; height: 100%; z-index: 1; }

/* 用户信息区域 */
.user-profile-section { position: relative; z-index: 1; display: flex; padding: 40rpx; gap: 32rpx; }
.user-avatar { flex-shrink: 0; }
.avatar-image { width: 120rpx; height: 120rpx; border-radius: 50%; background-color: #f0f0f0; border: 4rpx solid #fff; }
.user-info { flex: 1; display: flex; flex-direction: column; gap: 16rpx; }
.user-name-row { display: flex; align-items: center; gap: 12rpx; margin-top: 32rpx;}
.user-name { font-size: 40rpx; font-weight: 700; color: #333; }
/* 性别与标签 */
.gender-icon { width: 32rpx; height: 32rpx; border-radius: 50%; display: flex; align-items: center; justify-content: center; }
.gender-symbol { color: #fff; font-size: 20rpx; font-weight: bold; }
.gender-male { background: #306EEB; }
.gender-female { background: #ff69b4; }
.tag { padding: 6rpx 16rpx; border-radius: 18rpx; font-size: 22rpx; font-weight: 500; }
.student-tag { background: #54B247; color: #fff; }
/* 移除科目行（不再显示） */
/* .subjects-row, .subjects-label, .subjects-list { display: none; } */

/* 统计：我的课程 | 关注老师 */
.stats-row { position: relative; z-index: 1; margin: 0 40rpx 74rpx; display: flex; }
.stats-row.compact { border-radius: 16rpx; overflow: hidden; }
.stat-item { flex: 1; display: flex; flex-direction: column; align-items: center; justify-content: center; margin: 24rpx 0; }
.stat-item-hover { background: rgba(0, 0, 0, 0.04); }
.stat-item-border { border-left: 4rpx solid rgba(0, 0, 0, 0.10); }
.stat-number { font-size: 38rpx; color: #333; font-weight: 700; line-height: 1.2; }
.stat-label { font-size: 26rpx; color: #666; margin-top: 6rpx; }

/* 用户简介 */
.bio-section { position: relative; z-index: 1;  padding: 26rpx; }
.bio-text { font-size: 28rpx; color: #333; line-height: 1.6; }

/* 学生端无余额模块 */

/* 功能/服务 */
.my-functions-section, .teacher-services-section { position: relative; z-index: 1; margin: 0 40rpx 70rpx; }
.section-title { display: flex; align-items: center; gap: 16rpx; margin-bottom: 32rpx; }
.title-bar { width: 8rpx; height: 32rpx; background: #4CAF50; border-radius: 4rpx; }
.title-text { font-size: 36rpx; font-weight: 600; color: #333; }
.functions-grid { display: flex; gap: 80rpx; justify-content: flex-start; }
.services-grid { display: grid; grid-template-columns: repeat(4, 1fr); gap: 40rpx 20rpx; }
.function-item, .service-item { display: flex; flex-direction: column; align-items: center; gap: 16rpx; padding: 8rpx; }
.function-icon, .service-icon { width: 80rpx; height: 80rpx; }
.service-icon-wrapper { position: relative; display: inline-block; }
.function-name, .service-name { font-size: 24rpx; color: #333; text-align: center; line-height: 1.2; }

/* 退出登录 */
.logout-section { position: relative; z-index: 1; margin: 40rpx; margin-bottom: 80rpx; }
.logout-btn { width: 100%; height: 88rpx; background: #f5f5f5; color: #666; border: none; border-radius: 24rpx; font-size: 32rpx; font-weight: 500; }
.logout-btn::after { border: none; }