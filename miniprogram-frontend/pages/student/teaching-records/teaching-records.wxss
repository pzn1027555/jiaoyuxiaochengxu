.teaching-records-container{min-height:100vh;background:#f8f8f8;padding-bottom:40rpx}
.date-selector-container{padding:32rpx 40rpx;background:#fff}
.date-selector{display:flex;justify-content:space-between;padding:24rpx 32rpx;background:#f8f9fa;border-radius:16rpx;border:2rpx solid #e9ecef}
.date-item{display:flex;align-items:center;gap:8rpx;padding:16rpx 24rpx;background:#fff;border-radius:12rpx;border:1rpx solid #dee2e6;min-width:120rpx;justify-content:center}
.date-text{font-size:28rpx;color:#333;font-weight:500}
.date-arrow{font-size:20rpx;color:#666;transform:scale(.8)}
.course-list{flex:1;padding:0 40rpx;width:calc(100% - 80rpx)}
.course-item{margin-bottom:32rpx}
.time-section{margin-bottom:16rpx}
.time-text{font-size:32rpx;font-weight:600;color:#333}
.course-card{background:#fff;border-radius:24rpx;padding:32rpx;box-shadow:0 4rpx 20rpx rgba(0,0,0,.08);display:flex;gap:24rpx;position:relative}
.course-cover{position:relative;width:160rpx;height:120rpx;border-radius:16rpx;overflow:hidden;flex-shrink:0}
.cover-image{width:100%;height:100%}
.course-info{flex:1;display:flex;flex-direction:column;gap:16rpx}
.course-title{font-size:32rpx;font-weight:600;color:#333;line-height:1.4}
.class-tag{display:inline-block;margin-left:8rpx;background:#e8f5e8;color:#4CAF50;border-radius:16rpx;padding:4rpx 10rpx;font-size:22rpx}
.course-progress{display:flex;align-items:baseline;gap:8rpx}
.progress-text{font-size:28rpx;color:#666}
.total-lessons{font-size:24rpx;color:#999}
.class-students{display:flex;align-items:center;gap:12rpx;flex-wrap:wrap}
.student-avatar{width:32rpx;height:32rpx;border-radius:50%}
.student-all{display:flex;align-items:center;margin-right:12rpx}
.student-name{font-size:24rpx;color:#556}
.student-count{font-size:26rpx;color:#666;margin-left:8rpx}
.action-buttons{position:absolute;top:32rpx;right:32rpx;display:flex;flex-direction:column;gap:16rpx}
.action-btn{padding:12rpx 24rpx;border-radius:24rpx;font-size:24rpx;border:none;min-width:120rpx;height:48rpx;display:flex;align-items:center;justify-content:center;transition:all .3s}
.feedback-btn{background:#4CAF50;color:#fff}
.view-feedback-btn{background:#f8f9fa;color:#4CAF50;border:1rpx solid #4CAF50}
.no-data{display:flex;justify-content:center;align-items:center;height:400rpx}
.no-data-text{font-size:28rpx;color:#999}
/* 评价弹窗复用学习中心样式 */
.mask{position:fixed;left:0;right:0;top:0;bottom:0;background:rgba(0,0,0,.4);z-index:998}
.rv-card{position:fixed;left:24rpx;right:24rpx;top:10%;background:#fff;border-radius:28rpx;z-index:1000;padding:40rpx 32rpx 32rpx;box-shadow:0 12rpx 36rpx rgba(0,0,0,.1)}
.rv-emoji{width:260rpx;height:260rpx;display:block;margin:10rpx auto 24rpx}
.rv-title{text-align:center;font-size:40rpx;font-weight:700;color:#1a1a1a;margin-bottom:20rpx}
.rv-stars{display:flex;justify-content:center;align-items:center;gap:30rpx;margin:10rpx 0 28rpx}
.rv-star{font-size:56rpx;line-height:1;color:#cde9cd}
.rv-star.on{color:#54B247}
.rv-input{width:100%;min-height:360rpx;border:2rpx solid #54B247;border-radius:18rpx;padding:18rpx;font-size:28rpx;box-sizing:border-box}
.rv-submit{margin:32rpx auto 8rpx;width:88%;height:88rpx;background:#54B247;color:#fff;border:none;border-radius:44rpx;font-size:32rpx;display:flex;align-items:center;justify-content:center}
.rv-submit.ghost{background:#f2f2f2;color:#333}

