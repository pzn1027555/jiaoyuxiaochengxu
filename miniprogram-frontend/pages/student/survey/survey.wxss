.survey-container{  background: linear-gradient(0, #ffffff, #F5FFF2);min-height:100vh}
.survey-scroll{height:100vh;padding-bottom:120rpx}
.form-section{padding:16rpx 24rpx 60rpx}
.item{border-radius:16rpx;padding:20rpx 24rpx;margin-bottom:16rpx}
.label{color:#333;font-size:28rpx;margin-bottom:12rpx;display:block}
.input{border:2rpx solid #54B247;border-radius:12rpx;padding:16rpx}
.radios{display:flex;gap:40rpx}
.mini-radio{transform: scale(0.8);} /* 缩小radio视觉，兼容rpx不可用场景 */
.picker{border:2rpx solid #54B247;border-radius:12rpx;padding:16rpx;color:#2f3331;display:flex;align-items:center;justify-content:space-between}
.picker-text{flex:1}
.picker-arrow{color:#54B247;margin-left:12rpx}
.textarea{border:2rpx solid #54B247;border-radius:12rpx;min-height:200rpx;padding:16rpx}
.upload{border:2rpx solid #54B247;border-radius:999px;color:#54B247;padding:8rpx 20rpx;background:#fff}
.file{display:flex;justify-content:space-between;align-items:center;padding:12rpx 0;color:#333}
.file-name{max-width:80%;overflow:hidden;text-overflow:ellipsis;white-space:nowrap}
.remove{color:#999}
.footer{position:fixed;left:0;right:0;bottom:0;background:#fff;padding:16rpx 24rpx;box-shadow:0 -6rpx 14rpx rgba(0,0,0,0.06)}
.submit{background:#54B247;color:#fff;border-radius:999rpx;margin-bottom:30rpx}

.required{ color:#ff4d4f; margin-right:8rpx }

/* 家长选择器弹窗样式（复用 checkout 简化版） */
.parent-picker-mask{ position:fixed; left:0; right:0; top:0; bottom:0; background:rgba(0,0,0,0.5); display:flex; align-items:flex-end; z-index:1000 }
.parent-picker{ background:#fff; border-radius:24rpx 24rpx 0 0; width:100%; max-height:70vh; animation: slideUp 0.3s ease-out; padding-bottom:40rpx }
@keyframes slideUp{ from{ transform: translateY(100%) } to{ transform: translateY(0) } }
.picker-header{ display:flex; justify-content:space-between; align-items:center; padding:30rpx; border-bottom:1rpx solid #f0f0f0 }
.picker-title{ font-size:32rpx; font-weight:600; color:#333 }
.picker-close{ font-size:48rpx; color:#999; width:60rpx; height:60rpx; display:flex; align-items:center; justify-content:center }
.parent-list{ max-height:50vh; overflow-y:auto }
.parent-item{ display:flex; align-items:center; padding:24rpx 30rpx; border-bottom:1rpx solid #f5f5f5; position:relative }
.parent-item:last-child{ border-bottom:none }
.parent-item.selected{ background:#f8fff8 }
.parent-avatar{ width:80rpx; height:80rpx; border-radius:50%; margin-right:20rpx }
.parent-details{ flex:1 }
.parent-name{ font-size:30rpx; font-weight:500; color:#333; margin-bottom:8rpx }
.parent-phone{ font-size:26rpx; color:#666; margin-bottom:4rpx }
.parent-check{ color:#54B247; font-size:32rpx; font-weight:bold }



.margin_l,.item>textarea,.item>input,.item>picker,.item>.subject-picker-entry,.item>radio-group{
  margin-left: 30rpx;
}

.subject-picker-entry{
  border:2rpx solid #54B247;
  border-radius:12rpx;
  padding:16rpx;
  display:flex;
  justify-content:space-between;
  align-items:center;
  color:#2f3331;
}