/* pages/login/login.wxss */

.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #a8e6cf 0%, #dcedc8 50%, #f0f4c3 100%);
  position: relative;
  overflow: hidden;
}

/* 背景装饰 */
.bg-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 0;
}

.bg-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 40%;
  z-index: 1;
}

.bg-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(135deg, rgba(168, 230, 207, 0.8) 0%, rgba(220, 237, 200, 0.8) 50%, rgba(240, 244, 195, 0.8) 100%);
  z-index: 2;
}

/* 头部Logo区域 */
.header {
  position: relative;
  z-index: 3;
  padding: 120rpx 40rpx 80rpx;
  text-align: center;
}

.logo-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  background: #fff;
  padding: 20rpx;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.2);
  margin-bottom: 30rpx;
}

.logo-text {
  text-align: center;
}

.brand-name {
  font-size: 48rpx;
  font-weight: 700;
  color: #2E7D32;
  margin-bottom: 8rpx;
  letter-spacing: 2rpx;
}

.brand-subtitle {
  font-size: 28rpx;
  font-weight: 600;
  color: #4CAF50;
  margin-bottom: 8rpx;
  letter-spacing: 1rpx;
}

.brand-desc {
  font-size: 20rpx;
  color: #66BB6A;
  letter-spacing: 1rpx;
}

/* 登录表单 */
.login-form {
  position: relative;
  z-index: 3;
  background: #fff;
  margin: 0 40rpx;
  padding: 60rpx 40rpx 40rpx;
  border-radius: 32rpx;
  box-shadow: 0 12rpx 40rpx rgba(0, 0, 0, 0.1);
}

.form-title {
  font-size: 40rpx;
  /* font-weight: 600 ; */
  color: #333;
  text-align: left;
  margin-bottom: 16rpx;
}

.form-subtitle {
  font-size: 24rpx;
  color: #999;
  text-align: left;
  margin-bottom: 60rpx;
  line-height: 1.5;
}

/* 输入框组 */
.input-group {
  margin-bottom: 40rpx;
}

.input-container {
  position: relative;
  display: flex;
  align-items: center;
  background: #fff;
  border: 2rpx solid #e9ecef;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  transition: all 0.3s ease;
  min-height: 88rpx;
}

.input-container:focus-within {
  border-color: #4CAF50;
  box-shadow: 0 0 0 4rpx rgba(76, 175, 80, 0.1);
}



.floating-label {
  position: absolute;
  left: 10rpx;
  top: -20%;
  font-size: 28rpx;
  color: #999;
  pointer-events: none;
  transition: all 0.3s ease;
  background: #fff;
  padding: 0 8rpx;
  z-index: 1;
}

.input-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
  opacity: 0.6;
  flex-shrink: 0;
}

.input-field {
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  color: #333;
  background: transparent;
  border: none;
}

.input-field::placeholder {
  color: transparent;
}

/* 验证码按钮 */
.code-btn {
  background: #4CAF50;
  color: #fff;
  padding: 16rpx 24rpx;
  border-radius: 16rpx;
  font-size: 24rpx;
  line-height: 1;
  border: none;
  min-width: 120rpx;
  text-align: center;
  transition: all 0.3s ease;
}

.code-btn::after {
  border: none;
}

.code-btn.disabled {
  background: #e9ecef !important;
  color: #999 !important;
}

.code-btn:not(.disabled):active {
  background: #45A049;
  transform: scale(0.98);
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #4CAF50, #45A049);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  margin: 40rpx 0 60rpx;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.login-btn::after {
  border: none;
}

.login-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.login-btn.disabled {
  background: #e9ecef;
  color: #999;
  box-shadow: none;
}

/* 协议同意 */
.agreement {
  display: flex;
  justify-content: center;
  position: fixed;
  bottom: 60rpx;
  width: 100%;
}

.agreement-item {
  display: flex;
  align-items: center;
  cursor: pointer;
  width: calc(100% - 80rpx);
}

.custom-checkbox {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 16rpx;
  margin-top: 2rpx;
}

.checkbox-icon {
  width: 32rpx;
  height: 32rpx;
}

.checkbox-unchecked {
  width: 28rpx;
  height: 28rpx;
  border: 2rpx solid #ddd;
  border-radius: 6rpx;
  background: #fff;
}

.agreement-text {
  font-size: 24rpx;
  color: #666;
  flex: 1;
}

.link {
  color: #4CAF50;
  text-decoration: underline;
}

/* 其他登录方式 */
.other-login {
  position: relative;
  z-index: 3;
  margin: 60rpx 40rpx 0;
}

.divider {
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.divider-line {
  flex: 1;
  height: 1rpx;
  background: rgba(255, 255, 255, 0.3);
}

.divider-text {
  margin: 0 30rpx;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.7);
}

.wx-login-btn {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.9);
  color: #333;
  border-radius: 44rpx;
  font-size: 28rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.wx-login-btn::after {
  border: none;
}

.wx-login-btn:active {
  background: rgba(255, 255, 255, 0.8);
}

.wx-icon {
  width: 36rpx;
  height: 36rpx;
  margin-right: 16rpx;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 80vh;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.modal-overlay.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  position: relative;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

.modal-close {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 40rpx;
  max-height: 60vh;
}

.modal-text {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
}