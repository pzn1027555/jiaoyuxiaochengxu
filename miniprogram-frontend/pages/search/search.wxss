.search-page{ min-height:100vh; background:#f6fff3 }
.top-bar{ padding:24rpx }
.search-input-wrap{ display:flex; align-items:center; background:#fff; border-radius:28rpx; padding:18rpx 22rpx; box-shadow:0 6rpx 16rpx rgba(0,0,0,0.04) }
.search-input-wrap .icon-img{ width:32rpx; height:32rpx; margin-right:12rpx }
.search-input{ flex:1; font-size:28rpx; color:#333 }
.btn{ margin-left:12rpx; color:#54B247; }
.section-hd{ display:flex; justify-content:space-between; align-items:center; padding:0 24rpx }
.title{ color:#183314; font-weight:700; font-size:30rpx }
.clear{ color:#889a88; font-size:24rpx }
.history-list{ padding: 12rpx 24rpx; display:flex; flex-wrap:wrap; gap:16rpx }
.h-item{ background:#fff; border-radius:999rpx; padding:10rpx 18rpx; color:#597259; box-shadow:0 6rpx 14rpx rgba(0,0,0,0.04) }

.result-list{ padding: 0 24rpx }
.teacher-card{ background:#fff; border-radius:16rpx; padding:18rpx; margin-bottom:16rpx; box-shadow:0 4rpx 12rpx rgba(0,0,0,0.03) }
.card-row{ display:flex }
.avatar{ width:200rpx; height:200rpx; border-radius:12rpx; margin-right:16rpx; background:#e9f4e8; flex-shrink:0 }
.content-right{ flex:1; display:flex; flex-direction:column }
.title-row{ display:flex; align-items:center; gap:10rpx }
.name{ font-size:32rpx; font-weight:700; color:#183314 }
.gender-icon{ width: 26rpx; height: 26rpx; }
.district{ margin-left:auto; color:#597259; font-size:24rpx }
.tag-row, .tags{ display:flex; gap:8rpx; margin:6rpx 0 }
.badge, 
.tag{     background: #54B247;
  color: #fff; padding: 6rpx 12rpx; border-radius:20rpx; font-size:22rpx }
.subjects{ color:#597259 }
.subjects-strong, .strong{ font-weight:700 }
.desc{ color:#6a806a; font-size:24rpx; margin-top:6rpx; overflow:hidden; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; }
.price-row{ margin-top:12rpx }
.price .num, .price-num{ color:#ff6655; font-size:32rpx; font-weight:700 }
.price .unit, .price-unit{ color:#597259 }

.c-item{ display:flex; background:#fff; border-radius:16rpx; padding:18rpx; margin-bottom:16rpx }
.c-item .cover{ width:180rpx; height:120rpx; border-radius:12rpx; margin-right:16rpx; background:#eee }
.c-info{ flex:1 }
.title{ font-size:30rpx; font-weight:700; color:#183314 }
.meta-line{ margin-top:6rpx }
.meta-label{ color:#597259; font-size:24rpx }
.meta-desc{ color:#6a806a; font-size:24rpx }
.tags{ display:flex; gap:8rpx; margin-top:6rpx }
.tag{ background: #54B247;
  color: #fff; padding:6rpx 12rpx; border-radius:20rpx; font-size:22rpx }

