/* 课程首页样式 */
.course-home{ padding-bottom:140rpx;  background: linear-gradient(0, #ffffff, #F5FFF2); min-height:100vh }
.search-wrap{ padding:24rpx }
.search-input{ display:flex; align-items:center; background:#fff; border-radius:28rpx; padding:18rpx 22rpx; border: 1rpx solid #54B247;}
.search-input .icon-img{ width:32rpx; height:32rpx; margin-right:12rpx }
.search-input input{ flex:1; font-size:28rpx }
.hero-banner{ position:relative; height:220rpx; margin:0 24rpx 24rpx; border-radius:20rpx; overflow:hidden }
.hero-swiper, .hero-swiper swiper-item{ height:100% }
.hero-bg{ position:absolute; inset:0; width:100%; height:100% }
.quick-row{ display:flex; gap:20rpx; padding:0 24rpx; margin-bottom:16rpx }
.quick-card{ position:relative; flex:1; border-radius:20rpx; padding:26rpx 24rpx; color:#fff; height:150rpx; display:flex; flex-direction:column; justify-content:center; overflow:hidden }
.qc-bg{ position:absolute; inset:0; width:100%; height:100% }
.quick-card.topic{ background:#6a7bff }
.quick-card.material{ background:#8066ff }
.quick-card .q-title, .quick-card .q-sub{ position:relative; z-index:1 }
.quick-card .q-title{ font-size:32rpx; font-weight:700 }
.quick-card .q-sub{ opacity:.85; margin-top:8rpx }
.quick-card.disabled{ opacity:.6 }
.section{ padding:0 24rpx 12rpx }
.sec-hd{ display:flex; justify-content:space-between; align-items:center; padding:8rpx 4rpx }
.sec-hd.small{ padding:0 4rpx 6rpx }
.sec-title-wrap{ display:flex; align-items:center; gap:10rpx }
.sec-icon{ width:28rpx; height:28rpx }
.sec-title{ font-size:32rpx; font-weight:700; color:#54B247 }
.sec-title.dark{ color:#183314 }
.sec-more{font-size:26rpx ;color: #9aa89a;}
.teacher-cards{ white-space:nowrap; padding:6rpx 0 }
.t-track{ display:flex; gap:16rpx;  }
.t-card{     width: 300rpx;
  flex: 0 0 300rpx;
  height: 330rpx;
  background: #F3F3FB;
  border-radius: 16rpx;
  box-shadow: 0 8rpx 18rpx rgba(0,0,0,0.04);
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center; 
  padding: 24rpx;
margin-right: 20rpx;}
.t-card .avatar{ width:120rpx; height:120rpx; border-radius:50%; margin-bottom:12rpx }
.t-card .name{ font-weight:700; color:#183314; font-size:28rpx }
.t-card .tags{ margin:8rpx 0 6rpx }
.t-card .tag{ display:inline-block; background:#e8f5e8; color:#2f8b3c; border-radius:20rpx; padding:4rpx 12rpx; font-size:20rpx; margin:0 6rpx }
.t-card .intro{     color: #6b806a;
  font-size: 24rpx;
  line-height: 1.5;
  overflow-wrap: break-word;
  white-space: break-spaces;
  width: 100%; }
.tabs{ white-space:nowrap; padding:12rpx 4rpx; margin-bottom:8rpx }
.tabs-track{ display:inline-flex; gap:20rpx; padding-right:24rpx }
.tab{ color:#5f8f5d; font-size:28rpx; display:inline-flex; padding:8rpx 16rpx; border-radius:999px; background:#eef7ee }
.tab.active{ background:#54B247; color:#fff; font-weight:700 }
.course-list{ padding-bottom:20rpx }
.c-item{ display:flex; gap:16rpx; margin:20rpx 0; border-radius:16rpx; padding:24rpx;  }
.cover{ width:200rpx; height:140rpx; border-radius:12rpx }
.c-info{ flex:1 }
.title{ font-weight:700; color:#183314; font-size:30rpx }
.meta-line{ display:flex; align-items:center; gap:6rpx; margin:6rpx 0 }
.meta-label{ color:#54B247; font-size:24rpx;font-weight: 500; }
.meta-desc{ color:#7b8d7a; font-size:24rpx }
.tags .tag{ display:inline-block; border-radius:14rpx; padding:6rpx 12rpx; font-size:20rpx; margin-right:8rpx;background: #54B247;color: #fff; }
.tag.hot{ background:#fff1f0; color:#ff6a55 }
.tag.famous{ background:#e8f5e8; color:#2f8b3c }
.loading{ text-align:center; color:#9aa89a; padding:20rpx }
.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  position: relative;
  top: 2rpx;
}

