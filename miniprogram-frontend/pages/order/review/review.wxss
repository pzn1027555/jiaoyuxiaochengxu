.review-page {
  padding: 30rpx;
  background: linear-gradient( rgba(245, 255, 242, 1), rgba(255, 255, 255, 1));
  min-height: 100vh;
}

.course-info {
  background: transparent;
  padding: 24rpx 0;
  border-radius: 0;
  margin: 0;
  border-top: none;
}

.course-name {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.teacher-name {
  font-size: 26rpx;
  color: #666;
}

.rating-section {
  background: transparent;
  padding: 24rpx 0;
  border-radius: 0;
  margin: 0;
  border-top: 1rpx solid #e6e6e6;
}

.rating-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.stars {
  display: flex;
  gap: 10rpx;
}

.star {
  font-size: 60rpx;
  color: #ddd;
  cursor: pointer;
}

.star.active {
  color: #ffb400;
}

.field {
  background: transparent;
  border-radius: 0;
  padding: 24rpx 0;
  margin: 0;
  border-top: 1rpx solid #e6e6e6;
}

.content-input {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
}

.uploader {
  background: transparent;
  border-radius: 0;
  padding: 24rpx 0;
  margin: 0;
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  /* border-top: 1rpx solid #e6e6e6; */
}

.add{ width:140rpx; height:140rpx; border-radius:8rpx; background:#fbfbfb; color:#666; display:flex; align-items:center; justify-content:center; font-size:64rpx; border:1rpx solid #eee }

.image-item {
  position: relative;
  width: 160rpx;
  height: 160rpx;
}

.thumb {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.delete-btn {
  position: absolute;
  top: -10rpx;
  right: -10rpx;
  width: 40rpx;
  height: 40rpx;
  background: #ff4444;
  color: #fff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
}

.anonymous-option {
  background: transparent;
  border-radius: 0;
  padding: 24rpx 0;
  margin: 0;
  display: flex;
  align-items: center;
  gap: 20rpx;
  border-top: 1rpx solid #e6e6e6;
}

.anonymous-text {
  font-size: 28rpx;
  color: #333;
}

.submit {
  background: #54B247;
  color: #fff;
  border: none;
  border-radius: 12rpx;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  width: 100%;
  margin-top: 40rpx;
}

.submit:active {
  background: #4a9f3d;
}
