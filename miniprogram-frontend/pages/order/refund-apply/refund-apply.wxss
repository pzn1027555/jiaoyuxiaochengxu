.refund-page{   background: linear-gradient( rgba(245, 255, 242, 1), rgba(255, 255, 255, 1));
  min-height:100vh }
.header{ display:flex; padding:24rpx }
.cover{ width:200rpx; height:150rpx; border-radius:12rpx; margin-right:16rpx }
.h-info{ flex:1 }
.title{ font-size:32rpx; font-weight:700; color:#183314 }
.teacher{ color:#597259; margin:6rpx 0; display:flex; align-items:center; gap:8rpx }
.t-avatar{ width:36rpx; height:36rpx; border-radius:50% }
.price{ color:#ff6655; font-size:30rpx; font-weight:700 }
.section{  margin: 16rpx 24rpx; border-radius:16rpx; padding:20rpx }
.row{ display:flex; align-items:center; gap:12rpx; font-size:32rpx; color:#183314;margin-bottom: 24rpx; font-weight: 500;}
.row>text{
  font-weight: 400;
  font-size: 28rpx;
}
.star{ color:#ff4d4f; margin-right:6rpx }
.check{ width:36rpx; height:36rpx }
.reason-input{ width:100%; min-height:180rpx;border-radius:12rpx; padding:16rpx; margin-top:12rpx;border: 1rpx solid rgba(0, 0, 0, 0.08);background-color: rgba(250, 250, 250, 1); }
.footer{ padding:24rpx }
.submit-btn{ background: rgba(84, 178, 71, 1); color:#fff; border-radius: 32rpx }


