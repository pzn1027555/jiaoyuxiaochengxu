/* pages/role-select/role-select.wxss */

.role-select-container {
  min-height: 100vh;
  background: #fff;
  display: flex;
  flex-direction: column;
}

/* 头部区域 */
.header {
  position: relative;
  padding: 60rpx 40rpx 80rpx;
}

.skip-btn {
  position: absolute;
  top: 60rpx;
  right: 40rpx;
  font-size: 28rpx;
  color: #999;
  padding: 16rpx 24rpx;
}

.title {
  font-size: 48rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 38rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 20rpx;
}

.description {
  font-size: 30rpx;
  color: #666;
  line-height: 1.5;
}

/* 角色列表 */
.role-list {
  flex: 1;
  padding: 0 40rpx;
}

.role-item {
  background: #f8f9fa;
  border-radius: 24rpx;
  margin-bottom: 32rpx;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.role-item.selected {
  background: linear-gradient(135deg, #e8f5e8, #f1f8e9);
  border: 3rpx solid #4CAF50;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.2);
}

.role-item:active {
  transform: scale(0.98);
}

.role-content {
  display: flex;
  align-items: center;
  padding: 40rpx 32rpx;
}

/* 角色头像 */
.role-avatar {
  width: 120rpx;
  height: 120rpx;
  background: #fff;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 32rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}


.role-image {
  width: 80rpx;
  height: 80rpx;
}

.role-item.selected .role-image {
  /* filter: brightness(0) invert(1); */
}

/* 角色信息 */
.role-info {
  flex: 1;
}

.role-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 8rpx;
}

.role-item.selected .role-title {
  color: #2E7D32;
}

.role-subtitle {
  font-size: 28rpx;
  color: #999;
  font-weight: 400;
}

.role-item.selected .role-subtitle {
  color: #4CAF50;
}

/* 选择状态 */
.role-check {
  width: 48rpx;
  height: 48rpx;
}

.check-icon {
  width: 48rpx;
  height: 48rpx;
  border: 3rpx solid #ddd;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.check-icon.active {
  background: #4CAF50;
  border-color: #4CAF50;
}

.checkmark {
  color: #fff;
  font-size: 28rpx;
  font-weight: 600;
}

/* 底部按钮区域 */
.footer {
  padding: 40rpx;
  padding-bottom: calc(40rpx + env(safe-area-inset-bottom));
}

.next-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #4CAF50, #45A049);
  color: #fff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.3);
  transition: all 0.3s ease;
}

.next-btn::after {
  border: none;
}

.next-btn:active {
  transform: translateY(2rpx);
  box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3);
}

.next-btn.disabled {
  background: #e9ecef;
  color: #999;
  box-shadow: none;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.modal-content {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  max-height: 70vh;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.modal-overlay.show .modal-content {
  transform: translateY(0);
}

.modal-header {
  position: relative;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

.modal-close {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

.modal-body {
  padding: 40rpx;
  max-height: 50vh;
}

/* 角色权益 */
.role-benefits {
  space-y: 24rpx;
}

.benefit-item {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.benefit-icon {
  font-size: 32rpx;
  margin-right: 24rpx;
  width: 48rpx;
  text-align: center;
}

.benefit-text {
  flex: 1;
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
}

/* 角色选择动画 */
@keyframes roleSelect {
  0% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.02);
  }
  100% {
    transform: scale(1);
  }
}

.role-item.selected {
  animation: roleSelect 0.3s ease;
}

/* 深色模式适配 */
@media (prefers-color-scheme: dark) {
  .role-select-container {
    background: #1a1a1a;
  }
  
  .title, .subtitle {
    color: #fff;
  }
  
  .description {
    color: #999;
  }
  
  .role-item {
    background: #2a2a2a;
  }
  
  .role-title {
    color: #fff;
  }
}