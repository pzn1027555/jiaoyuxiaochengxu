/* miniprogram-frontend/pages/orders/orders.wxss */
.orders-page {
  height: 100vh;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(0, #ffffff, #F5FFF2);
}

/* 页签栏 */
.tab-bar {
  display: flex;
  background-color: #fff;
  border-bottom: 1rpx solid #e0e0e0;
  flex-shrink: 0;
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.tab-item.active {
  color: #54B247;
  font-weight: 500;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background-color: #54B247;
  border-radius: 2rpx;
}

/* 订单列表 */
.order-list {
  padding: 20rpx;
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.order-card {
  /* background-color: #fff; */
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  border: 1rpx solid rgba(84, 178, 71, 1);
  /* box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1); */
}

/* 订单头部 */
.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-time {
  font-size: 26rpx;
  color: #999;
}

.order-status {
  font-size: 26rpx;
  font-weight: 500;
}

/* 课程信息 */
.course-info {
  display: flex;
  padding: 30rpx;
  align-items: flex-start;
}

/* 学生标注（家长端） */
.student-badge{ display:flex; align-items:center; margin: 0 0 12rpx 0 }
.student-avatar{ width: 44rpx; height: 44rpx; border-radius: 50%; margin-right: 12rpx }
.student-name{ font-size: 28rpx; color:#666 }

.course-image-container {
  width: 240rpx;
  height: 160rpx;
  flex-shrink: 0;
  margin-right: 24rpx;
}

.course-image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
}

.course-placeholder {
  width: 100%;
  height: 100%;
  border-radius: 12rpx;
  background-color: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: center;
}

.placeholder-icon {
  width: 60rpx;
  height: 60rpx;
  opacity: 0.5;
}

.course-details {
  flex: 1;
}

.course-title-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.course-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.4;
  margin-right: 16rpx;
}

.course-type-tag {
  font-size: 20rpx;
  color: #fff;
  background-color: rgba(84, 178, 71, 1);
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  flex-shrink: 0;
}

.teacher-info {
  display: flex;
  align-items: center;
  margin-bottom: 8rpx;
}

.teacher-avatar {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
  margin-right: 12rpx;
  flex-shrink: 0;
}

.teacher-name {
  font-size: 26rpx;
  color: #666;
}

.price-info {
  margin-top: 12rpx;
}

.current-price {
  font-size: 32rpx;
  font-weight: 600;
  color: #ff6b35;
  margin-bottom: 4rpx;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
}

/* 订单信息 */
.order-info {
  padding: 0 30rpx 20rpx;
}

.order-no {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 8rpx;
}

.pay-info {
  font-size: 24rpx;
  color: #999;
}

/* 操作按钮 */
.order-actions {
  /* 改为非 flex 布局，使用浮动按钮靠右排布 */
  padding: 20rpx 30rpx 30rpx;
  border-top: 1rpx solid #f0f0f0;
  overflow: hidden; /* 包裹内部 float */
}

.action-btn {
  width: 180rpx; /* 固定按钮宽度 */
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  border-radius: 30rpx;
  text-align: center;
  padding: 0 24rpx;
  margin-left: 16rpx; /* 使用左侧间隔，右侧对齐 */
  float: right; /* 使按钮整体靠右，一行排列 */
}

/* .order-actions .action-btn:first-child {
  margin-left: 0;
} */

.action-btn.default {
  background-color: transparent;
  color: rgba(84, 178, 71, 1);
  border: 1rpx solid rgba(84, 178, 71, 1);
}

.action-btn.primary {
  background-color: #54B247;
  color: #fff;
  border: 1rpx solid #54B247;
}

.action-btn.default:active {
  background-color: rgba(84, 178, 71, 0.1);
}

.action-btn.primary:active {
  background-color: #4a9f3d;
}

/* 空状态 */
.empty-state {
  text-align: center;
  padding: 100rpx 40rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 16rpx;
}

.empty-desc {
  font-size: 26rpx;
  color: #999;
}

/* 加载状态 */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 40rpx;
}

.loading-icon {
  width: 60rpx;
  height: 60rpx;
  border: 4rpx solid #f3f3f3;
  border-top: 4rpx solid #54B247;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 30rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 26rpx;
  color: #999;
}

/* 加载更多/没有更多 */
.load-more, .no-more {
  text-align: center;
  padding: 40rpx 0;
}

.load-more-text, .no-more-text {
  font-size: 24rpx;
  color: #999;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .course-info {
    padding: 24rpx;
  }
  
  .course-image {
    width: 100rpx;
    height: 100rpx;
  }
  
  .course-title {
    font-size: 28rpx;
  }
  
  .current-price {
    font-size: 28rpx;
  }
}
