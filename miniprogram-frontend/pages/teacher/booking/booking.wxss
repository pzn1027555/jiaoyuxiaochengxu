.booking-container {
  background: #f7fbf8;
  min-height: 100vh;
}

.content { padding: 16rpx 24rpx 40rpx; }

.hint { color: #6a6a6a; font-size: 26rpx; margin: 16rpx 0 24rpx; }

.booking-item { display: flex; flex-direction: column; background: #fff; border-radius: 16rpx; padding: 24rpx; margin-bottom: 20rpx; }
.top-row { display: flex; }
.avatar { width: 96rpx; height: 96rpx; border-radius: 50%; background: #eee; flex-shrink: 0; }
.meta { flex: 1; margin-left: 20rpx; }
.row1 { display: flex; flex-wrap: wrap; align-items: baseline; gap: 8rpx; }
.name { font-size: 30rpx; font-weight: 600; color: #222; }
.desc { color: #222; font-size: 28rpx; }
.course { color: #54B247 ; font-weight: 600; font-size: 28rpx; }

/* 预约信息样式 */
.booking-info {
  margin-top: 8rpx;
  padding: 12rpx 0;
  border-top: 1rpx solid #f0f0f0;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.booking-time {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

.booking-duration,
.booking-price {
  font-size: 24rpx;
  color: #666;
}
.row-bottom { margin-top: 12rpx; display: flex; justify-content: space-between; align-items: center; width: 100%; }
.time { font-size: 24rpx; color: #9aa29a; }
.actions { display: flex; gap: 16rpx; }
.btn { line-height: 64rpx; height: 64rpx; border-radius: 40rpx; padding: 0 28rpx; font-size: 26rpx; }
.btn.reject { color: #54B247 ; border: 1px solid #54B247 ; background: #fff; }
.btn.approve { background: #54B247 ; color: #fff; }
.btn.ghost { color: #54B247 ; border: 1px solid #54B247 ; background: #fff; }
.rejected-tag { color: #9aa29a; font-size: 24rpx; }

.empty { margin-top: 120rpx; text-align: center; color: #9aa29a; }
.empty-img { width: 280rpx; height: 200rpx; margin: 0 auto 12rpx; }
.empty-text { font-size: 26rpx; }


