/* 上传资料页面样式 */
.upload-container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 140rpx;
}

/* 已上传信息卡片 */
.uploaded-info { margin: 20rpx 32rpx; background:#fff; border-radius:16rpx; padding:24rpx; }
.ui-row { display:flex; align-items:center; gap: 12rpx; margin-bottom: 12rpx; }
.ui-label { color:#666; font-size: 26rpx; }
.ui-name { color:#333; font-size: 28rpx; font-weight: 600; }
.ui-cover-preview { margin-top: 12rpx; }
.ui-cover-img { width: 100%; height: 300rpx; border-radius: 12rpx; background:#eee; }

/* 页面内容容器 */
.content-container {
  min-height: 100vh;
}

/* 编辑模式信息显示 */
.edit-info {
  /* margin: 32rpx; */
  padding: 32rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  /* border-left: 8rpx solid #4CAF50; */
}

.edit-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #4CAF50;
  margin-bottom: 16rpx;
}

.original-title {
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 16rpx;
  line-height: 1.4;
}

.edit-tip {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 顶部右侧内容 */
.header-right-content {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.menu-icon, .record-icon {
  padding: 12rpx;
}

.menu-dots {
  display: flex;
  flex-direction: column;
  gap: 6rpx;
  align-items: center;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  background-color: #666;
  border-radius: 50%;
}

.record-placeholder {
  width: 48rpx;
  height: 48rpx;
  background-color: #4CAF50;
  border-radius: 50%;
}

/* 上传区域 */
.upload-section {
  padding: 40rpx 32rpx;
}

.upload-area {
  border: 4rpx dashed #4CAF50;
  border-radius: 24rpx;
  padding: 120rpx 40rpx;
  text-align: center;
  background-color: rgba(76, 175, 80, 0.03);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}

.upload-icon {
  font-size: 80rpx;
  color: #4CAF50;
  font-weight: 300;
  line-height: 1;
}

.upload-text {
  font-size: 32rpx;
  color: #4CAF50;
  font-weight: 500;
}

.upload-hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
}

.uploaded-file {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
}
.uploaded-name { font-size: 30rpx; color: #333; font-weight: 600; }
.uploaded-url { font-size: 24rpx; color: #999; word-break: break-all; }

/* 售卖价格设置 */
.price-section {
  margin: 0 32rpx 60rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.price-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx;
}

.price-label {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.price-value {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.price-text {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
}

.arrow-right { font-size: 28rpx; color: #999; }
.arrow-icon { width: 28rpx; height: 28rpx; }

/* 分类选择 与 售卖价格一致的卡片样式 */
.category-section {
  margin: 0 32rpx 60rpx;
  background-color: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}
.category-label {
  padding: 32rpx 32rpx 0 32rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  float: left;
}
.category-value {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 32rpx 32rpx 32rpx;
  font-size: 30rpx;
  color: #333;
  float: right;
}

/* 备注区域 */
.note-section {
  margin: 0 32rpx 60rpx;
}

.note-label {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 24rpx;
}

.note-input {
  width: 100%;
  min-height: 200rpx;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  border: 2rpx solid #e5e5e5;
  box-sizing: border-box;
}

.note-input::placeholder {
  color: #999;
}

/* 确认上传按钮 */
.upload-btn-container {
  position: fixed;
  bottom: 20rpx;
  left: 0;
  right: 0;
  padding: 32rpx;
  background-color: #fff;
  border-top: 1rpx solid #e5e5e5;
  z-index: 999;
}

.upload-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #4CAF50, #45A049);
  border-radius: 44rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #fff;
  font-weight: 600;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.3);
}

.upload-btn:active {
  background: linear-gradient(135deg, #45A049, #3d8b40);
  transform: translateY(2rpx);
}
.arrow-icon{
  width: 60rpx;
  height: 60rpx;
}

/* 封面图样式 */
.cover-section {
  margin: 0 32rpx 60rpx;
  /* background-color: #fff; */
  border-radius: 16rpx;
  overflow: hidden;
  padding: 24rpx;
}
.cover-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 16rpx; }
.cover-title { font-size: 28rpx; color: #333; font-weight: 600; }
.cover-btn { background: #4CAF50; color: #fff; }
.cover-area {
  border: 4rpx dashed #4CAF50;
  border-radius: 24rpx;
  /* padding: 80rpx 40rpx; */
  text-align: center;
  background-color: rgba(76, 175, 80, 0.03);
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 24rpx;
}
.cover-preview { width: 100%; height: 300rpx; border-radius: 12rpx; background: #f5f5f5; }