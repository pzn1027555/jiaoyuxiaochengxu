/* pages/teacher/teaching-records/teaching-records.wxss */

.teaching-records-container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 40rpx;
}

/* 日期选择器容器 */
.date-selector-container {
  padding: 32rpx 40rpx;
  background-color: #fff;
}

.date-selector {
  display: flex;
  justify-content: space-between;
  padding: 24rpx 32rpx;
  background-color: #f8f9fa;
  border-radius: 16rpx;
  border: 2rpx solid #e9ecef;
}

.date-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background-color: #fff;
  border-radius: 12rpx;
  border: 1rpx solid #dee2e6;
  min-width: 120rpx;
  justify-content: center;
}

.date-text {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.date-arrow {
  font-size: 20rpx;
  color: #666;
  transform: scale(0.8);
}

/* 课程列表 */
.course-list {
  flex: 1;
  padding: 0 40rpx;
  width: calc(100% - 80rpx);
}

.course-item {
  margin-bottom: 32rpx;
}

/* 时间段 */
.time-section {
  margin-bottom: 16rpx;
}

.time-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

/* 课程卡片 */
.course-card {
  background-color: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  display: flex;
  gap: 24rpx;
  position: relative;
}

/* 课程封面 */
.course-cover {
  position: relative;
  width: 160rpx;
  height: 120rpx;
  border-radius: 16rpx;
  overflow: hidden;
  flex-shrink: 0;
}

.cover-image {
  width: 100%;
  height: 100%;
}

/* 为不同课程类型设置不同的背景色 */
.course-card[data-course-type="ap"] .cover-image {
  background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
}

.course-card[data-course-type="ig"] .cover-image {
  background: linear-gradient(135deg, #2c3e50 0%, #34495e 100%);
}

.course-card[data-course-type="ib"] .cover-image {
  background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%);
}

.cover-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.3);
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
}

.course-type {
  color: #fff;
  font-size: 24rpx;
  font-weight: 600;
  text-align: center;
  line-height: 1.4;
}

/* 课程信息 */
.course-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.course-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  line-height: 1.4;
}
.class-tag{display:inline-block;margin-left:8rpx;background:#e8f5e8;color:#4CAF50;border-radius:16rpx;padding:4rpx 10rpx;font-size:22rpx}

.course-progress {
  display: flex;
  align-items: baseline;
  gap: 8rpx;
}

.progress-text {
  font-size: 28rpx;
  color: #666;
}

.total-lessons {
  font-size: 24rpx;
  color: #999;
}

.class-students{display:flex;align-items:center;gap:12rpx;flex-wrap:wrap}
.student-avatar{width:32rpx;height:32rpx;border-radius:50%}
.student-all{display:flex;align-items:center;margin-right:12rpx}
.student-name{font-size:24rpx;color:#556}
.student-count{font-size:26rpx;color:#666;margin-left:8rpx}

/* 操作按钮 */
.action-buttons {
  position: absolute;
  top: 32rpx;
  right: 32rpx;
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.action-btn {
  padding: 12rpx 24rpx;
  border-radius: 24rpx;
  font-size: 24rpx;
  border: none;
  min-width: 120rpx;
  height: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

/* 填写反馈按钮 */
.feedback-btn {
  background-color: #4CAF50;
  color: #fff;
}

.feedback-btn:active {
  background-color: #45a049;
}

/* 查看反馈按钮 */
.view-feedback-btn {
  background-color: #f8f9fa;
  color: #4CAF50;
  border: 1rpx solid #4CAF50;
}

.view-feedback-btn:active {
  background-color: #e9ecef;
}

/* 申期报告按钮 */
.report-btn {
  background-color: #FF9800;
  color: #fff;
}

.report-btn:active {
  background-color: #f57c00;
}

/* 查看申期报告按钮 */
.view-report-btn {
  background-color: #f8f9fa;
  color: #FF9800;
  border: 1rpx solid #FF9800;
}

.view-report-btn:active {
  background-color: #e9ecef;
}

/* 无数据提示 */
.no-data {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 400rpx;
}

.no-data-text {
  font-size: 28rpx;
  color: #999;
}

/* 反馈弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.feedback-modal {
  width: 640rpx;
  background-color: #fff;
  border-radius: 24rpx;
  margin: 0 40rpx;
  transform: scale(0.8) translateY(50rpx);
  transition: all 0.3s ease;
}

.modal-overlay.show .feedback-modal {
  transform: scale(1) translateY(0);
}

/* 弹窗标题 */
.modal-header {
  padding: 48rpx 40rpx 32rpx;
  text-align: center;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

/* 弹窗内容 */
.modal-content {
  padding: 32rpx 40rpx;
}

.feedback-textarea {
  width: 100%;
  min-height: 240rpx;
  padding: 24rpx;
  background-color: #f8f9fa;
  border: 2rpx solid #e9ecef;
  border-radius: 12rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  box-sizing: border-box;
  resize: none;
}

.feedback-textarea:focus {
  border-color: #4CAF50;
  outline: none;
}

.feedback-textarea[readonly] {
  background-color: #f5f5f5;
  color: #666;
}

.textarea-placeholder {
  color: #999;
  font-size: 28rpx;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  padding-right: 8rpx;
}

/* 弹窗底部按钮 */
.modal-actions {
  display: flex;
  padding: 32rpx 40rpx 48rpx;
  gap: 24rpx;
}

.modal-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 30rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.cancel-btn {
  background-color: #f8f9fa;
  color: #666;
  border: 1rpx solid #e9ecef;
}

.cancel-btn:active {
  background-color: #e9ecef;
}

.confirm-btn {
  background-color: #4CAF50;
  color: #fff;
}

.confirm-btn:active {
  background-color: #45a049;
  transform: scale(0.98);
}
