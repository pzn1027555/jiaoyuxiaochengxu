@import "/styles/calendar.wxss";
.schedule-container{min-height:100vh;background:#f5fbf5}
.calendar{background:#fff}
.calendar-bar{display:flex;align-items:center;justify-content:center;padding:24rpx 0}
.calendar-bar .month-text{font-size:32rpx;font-weight:600;margin:0 24rpx}
.calendar-bar .arrow{width:80rpx;text-align:center;color:#4CAF50}
.day-title{padding:24rpx;color:#4CAF50;font-weight:600}
.timeline{padding:0 24rpx calc(160rpx + env(safe-area-inset-bottom))}
.slot{margin-bottom:24rpx}
.time{color:#4b5b50;font-size:28rpx;margin:12rpx 0}
.card{background:#fff;border-radius:16rpx;display:flex;align-items:center;padding:24rpx;box-shadow:0 6rpx 16rpx rgba(0,0,0,0.04)}
.cover{width:240rpx;height:160rpx;border-radius:12rpx;background:#eee;margin-right: 20rpx;}
.info{flex:1;padding:0 0}
.row{display:flex;align-items:center;gap:12rpx;margin-bottom: 20rpx;}
.tag{background:#e8f5e8;color:#4CAF50;border-radius:20rpx;padding:4rpx 12rpx;font-size:22rpx}
.title{font-size:30rpx;color:#333;font-weight:600;max-width: 150rpx;}
.sub{font-size:26rpx;color:#7b8b84;margin-top:6rpx}
.meta{font-size:26rpx;color:#7b8b84;margin-top:6rpx}
.students{display:flex;align-items:center;flex-wrap:wrap;gap:12rpx;margin-top:8rpx}
.students .avatar{width:44rpx;height:44rpx;border-radius:50%;margin-left: -8rpx;}
.students .s-all{display:flex;align-items:center;margin-right:16rpx}
.students .s-all .name{font-size:24rpx;color:#556;margin-left: 8rpx;}
.ops{display:flex;gap:16rpx;flex-direction: column;}
.op{font-size:24rpx;border:1rpx solid #4CAF50;color:#4CAF50;border-radius:999px;width: 160rpx;background:#fff}
.footer{position:fixed;left:0;right:0;bottom:0;background:#fff;padding:24rpx;padding-bottom:calc(24rpx + env(safe-area-inset-bottom));box-shadow:0 -4rpx 12rpx rgba(0,0,0,0.06)}
.add{width:100%;background:#4CAF50;color:#fff;border-radius:999px;}

/* 复用编辑页弹窗样式 */
.mask{position:fixed;left:0;right:0;top:0;bottom:0;background:rgba(0,0,0,0.4);z-index:998}
.sheet{position:fixed;left:0;right:0;bottom:0;background:#fff;border-top-left-radius:24rpx;border-top-right-radius:24rpx;z-index:999;display:flex;flex-direction:column}
.sheet-hd{padding:24rpx;text-align:center;font-weight:600}
.sheet-picker{height:360rpx}
.sheet-item{height:80rpx;display:flex;align-items:center;justify-content:center}
.sheet-ft{display:flex;gap:16rpx;padding:16rpx 24rpx  calc(16rpx + env(safe-area-inset-bottom));border-top:1rpx solid #f0f0f0}
.btn{flex:1;border-radius:999px;background:#fff;color:#4CAF50;border:1rpx solid #4CAF50}
.btn.primary{background:#4CAF50;color:#fff}

