/* pages/teacher/resources/resources.wxss */

.resources-container {
  min-height: 100vh;
  background: #f8f8f8;
  padding-bottom: 140rpx; /* 为底部导航留出空间 */
}

/* 头部 */
.header {
  background: #fff;
  padding: 40rpx 30rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}

.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
}

.header-menu {
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  padding: 20rpx;
}

.menu-dots {
  display: flex;
  gap: 8rpx;
}

.dot {
  width: 8rpx;
  height: 8rpx;
  background: #333;
  border-radius: 50%;
}

/* 资源列表 */
.resources-list {
  padding:  30rpx;
  background: #f8f8f8;
}

.resource-item {
  background: #fff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  display: flex;
  align-items: flex-start;
  gap: 24rpx;
}

/* 资源缩略图 */
/* 缩略图改为图片显示 */
.resource-thumb { width: 220rpx; height: 160rpx; border-radius: 16rpx; background: #f5f5f5; flex-shrink: 0; }

.resource-right { flex: 1; display: flex; flex-direction: column; gap: 12rpx; max-width: 100%;}
.title-row { font-size: 32rpx; font-weight: 600; color: #333; line-height: 1.5; word-break: break-all; overflow-wrap: anywhere; }
.meta-row { display: flex; align-items: center; gap: 16rpx; color: #999; font-size: 24rpx; }
.meta-sep { opacity: 0.6; }
.price-row { color: #f44336; font-size: 40rpx; font-weight: 700; margin-top: 8rpx; }
.action-row { display: flex; gap: 20rpx; margin-top: 12rpx; }
.btn { padding: 16rpx 24rpx; border-radius: 32rpx; font-size: 28rpx; font-weight: 500; border: 2rpx solid; background: transparent; min-width: 145rpx; text-align: center; }
.btn::after { border: none; }
.btn.delete { border-color: #f44336; color: #f44336; }
.btn.delete:active { background: #ffebee; }
.btn.edit { border-color: #4CAF50; color: #4CAF50; }
.btn.edit:active { background: #e8f5e8; }

/* 资源内容区域 */
/* 移除旧内容样式（已替换为上面的行内块） */

/* 操作按钮区域 */
.resource-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
  flex-shrink: 0;
}

.action-btn {
  padding: 16rpx 32rpx;
  border-radius: 32rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: 2rpx solid;
  background: transparent;
  min-width: 120rpx;
  text-align: center;
}

.action-btn::after {
  border: none;
}

.delete-btn {
  border-color: #f44336;
  color: #f44336;
}

.delete-btn:active {
  background: #ffebee;
}

.reupload-btn {
  border-color: #4CAF50;
  color: #4CAF50;
}

.reupload-btn:active {
  background: #e8f5e8;
}

/* 空状态 */
.empty-resources {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 40rpx;
  text-align: center;
}

.empty-icon {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-desc {
  font-size: 24rpx;
  color: #999;
  line-height: 1.5;
}

/* 加载状态 */
.loading {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #999;
  font-size: 24rpx;
}

/* 上传按钮 */
.upload-fab {
  position: fixed;
  bottom: 180rpx; /* 避免被底部导航栏遮挡 */
  right: 40rpx;
  bottom: 240rpx;
  background: linear-gradient(135deg, #4CAF50, #45A049);
  width: 140rpx;
  height: 140rpx;
  border-radius: 140rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 12rpx 32rpx rgba(76, 175, 80, 0.4);
  z-index: 100;
}

.fab-icon {
  font-size: 56rpx;
  color: #fff;
  font-weight: 300;
  line-height: 1;
}

.fab-text {
  font-size: 24rpx;
  color: #fff;
  font-weight: 500;
  line-height: 1;
}

/* 弹窗样式 */
.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: all 0.3s ease;
}

.modal-overlay.show {
  opacity: 1;
  visibility: visible;
}

.upload-modal, .detail-modal {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 32rpx 32rpx 0 0;
  transform: translateY(100%);
  transition: transform 0.3s ease;
}

.modal-overlay.show .upload-modal,
.modal-overlay.show .detail-modal {
  transform: translateY(0);
}

.modal-header {
  position: relative;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
}

.modal-close {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  font-size: 48rpx;
  color: #999;
  line-height: 1;
}

/* 上传选项 */
.upload-options {
  padding: 40rpx;
}

.upload-option {
  display: flex;
  align-items: center;
  padding: 30rpx 20rpx;
  margin-bottom: 20rpx;
  background: #f8f9fa;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.upload-option:active {
  background: #e9ecef;
}

.option-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 20rpx;
}

.option-text {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  margin-bottom: 8rpx;
}

.option-desc {
  font-size: 24rpx;
  color: #666;
  line-height: 1.4;
}

/* 详情弹窗 */
.detail-content {
  padding: 40rpx;
  max-height: 70vh;
  overflow-y: auto;
}

.detail-preview {
  text-align: center;
  margin-bottom: 30rpx;
}

.detail-image {
  max-width: 200rpx;
  max-height: 150rpx;
  border-radius: 8rpx;
}

.detail-info {
  margin-bottom: 40rpx;
}

.detail-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.meta-item {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.meta-label {
  font-size: 24rpx;
  color: #666;
  width: 160rpx;
}

.meta-value {
  font-size: 24rpx;
  color: #333;
  flex: 1;
}

.meta-value.price {
  color: #f44336;
  font-weight: 600;
}

.detail-description {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.desc-label {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.desc-content {
  font-size: 24rpx;
  color: #333;
  line-height: 1.6;
}

.detail-actions {
  display: flex;
  gap: 20rpx;
  padding-bottom: 20rpx;
}

.detail-btn {
  flex: 1;
  height: 80rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border: none;
}

.detail-btn::after {
  border: none;
}

.detail-btn.primary {
  background: #4CAF50;
  color: #fff;
}

.detail-btn.secondary {
  background: #f5f5f5;
  color: #666;
}