.bank-card-page {
  width: 100%;
  height: 100vh;
  background-color: #fff;
}

.content-wrapper {
  padding-bottom: 170rpx;
}

/* 表单容器 */
.form-container {
  background-color: #fff;
  margin: 24rpx 32rpx;
  border-radius: 16rpx;
  overflow: hidden;
  padding-top: 20rpx;
}

.form-item {
  border-bottom: 1rpx solid #f0f0f0;
  padding: 0;
}

.form-label {
  padding: 32rpx 32rpx 0;
  font-size: 32rpx;
  font-weight: 500;
  color: #333;
  line-height: 1.5;
}

.input-container {
}

.form-input {
  width: 100%;
  height: 88rpx;
  border-radius: 12rpx;
  padding: 0 24rpx;
  font-size: 30rpx;
  color: #333;
  border: none;
  outline: none;
  box-sizing: border-box;
}

.form-input::placeholder {
  color: #999;
  font-size: 30rpx;
}

.form-input:focus {
  background: #f0f9ff;
  border: 2rpx solid #1890ff;
}

/* 底部容器 */
.bottom-container {
  position: fixed;
  bottom: 0rpx;
  left: 0;
  right: 0;
  background-color: #fff;
  padding: 32rpx;
  border-top: 1rpx solid #f0f0f0;
  box-shadow: 0 -4rpx 20rpx rgba(0,0,0,0.08);
  z-index: 999;
}

.save-btn {
  width: 100%;
  height: 96rpx;
  background: #52c41a;
  border-radius: 48rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(82, 196, 26, 0.3);
  transition: all 0.3s ease;
  margin-bottom: 30rpx;
}

.save-btn:active {
  background: #389e0d;
  transform: translateY(2rpx);
  box-shadow: 0 2rpx 8rpx rgba(82, 196, 26, 0.4);
}

.save-btn-text {
  font-size: 32rpx;
  font-weight: 500;
  color: #fff;
  letter-spacing: 2rpx;
}

/* 响应式适配 */
@media screen and (max-width: 375px) {
  .scroll-container {
    padding: 0 24rpx;
  }
  
  .form-label {
    font-size: 30rpx;
    padding: 28rpx 28rpx 0;
  }
  
  .input-container {
    padding: 12rpx 28rpx 28rpx;
  }
  
  .form-input {
    height: 80rpx;
    font-size: 28rpx;
    padding: 0 20rpx;
  }
  
  .bottom-container {
    padding: 28rpx 24rpx;
  }
  
  .save-btn {
    height: 88rpx;
  }
  
  .save-btn-text {
    font-size: 30rpx;
  }
}
