/* pages/teacher/midterm-report-write/midterm-report-write.wxss */

.midterm-report-container {
  min-height: 100vh;
  background-color: #f8f8f8;
  padding-bottom: 120rpx;
}

/* 表单内容 */
.report-form {
  padding: 32rpx 40rpx;
}

/* 表单区块 */
.form-section {
  margin-bottom: 48rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  line-height: 1.4;
  padding-top: 20rpx;
}

/* 文本框样式 */
.form-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 32rpx;
  background-color: #fff;
  border: 2rpx solid #e9ecef;
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333;
  line-height: 1.6;
  box-sizing: border-box;
}

.form-textarea:focus {
  border-color: #4CAF50;
  outline: none;
}

.textarea-placeholder {
  color: #999;
  font-size: 28rpx;
}

/* 字符计数 */
.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 16rpx;
  padding-right: 16rpx;
}

/* 提交按钮区域 */
.submit-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 32rpx 40rpx;
  background-color: #fff;
  border-top: 1rpx solid #e9ecef;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.05);
}

.submit-btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 600;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.submit-btn.active {
  background-color: #4CAF50;
  color: #fff;
}

.submit-btn.active:active {
  background-color: #45a049;
  transform: scale(0.98);
}

.submit-btn.disabled {
  background-color: #f5f5f5;
  color: #ccc;
  cursor: not-allowed;
}

/* 适配安全区域 */
.submit-section {
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}
