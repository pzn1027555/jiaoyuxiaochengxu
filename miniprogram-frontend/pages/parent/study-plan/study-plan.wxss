@import "/styles/calendar.wxss";
.page{ min-height:100vh; background:#f8f8f8 }
.children-bar{ white-space:nowrap; background:#fff; padding:12rpx 16rpx; }
.children-track{ display:flex; align-items:center ;padding: 12rpx;}
.child{ display:flex; flex-direction:column; align-items:center; margin-right:16rpx }
.child .avatar{ width:80rpx; height:80rpx; border-radius:50% }
.child .name{ font-size:24rpx; color:#333; margin-top:6rpx }
.child.active .name{ color:#54B247; font-weight:600 }

/* 月历容器 */
.calendar-section{ background:#fff; margin:16rpx; padding:16rpx; border-radius:12rpx }
.calendar-header{ display:flex; justify-content:space-between; align-items:center; margin-bottom:8rpx }
.ms-title{ font-weight:600; color:#0F0F14 }
.ms-btn{ width:60rpx; text-align:center; color:#54B247 }

/* 列表容器（与 schedule-confirm 对齐） */
.schedule-list{ background:#fff; margin:16rpx; padding:16rpx; border-radius:12rpx }
.schedule-title{ display:flex; align-items:center; color:#0F0F14; font-weight:600; margin-bottom:12rpx }
.schedule-title .bar{ width:8rpx; background:#54B247; height:32rpx; border-radius:4rpx; margin-right:12rpx }
.schedule-items{ display:flex; flex-direction:column; gap:16rpx }
.schedule-item{ display:flex }
.schedule-info{ flex:1 }
.schedule-title-text{ font-size:28rpx; color:#0F0F14 }
.detail-row{ display:flex; justify-content:space-between; margin:8rpx 0 }
.empty,.loading{ text-align:center; color:#999; padding:60rpx 0 }

