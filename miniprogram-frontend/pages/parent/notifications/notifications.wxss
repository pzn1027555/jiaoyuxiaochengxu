.notice-container { background: linear-gradient(0, #ffffff, #F5FFF2);min-height: 100vh; }
.content { padding: 16rpx 24rpx 40rpx; }
.notice-item { display: flex; align-items: center; border-radius: 16rpx; padding: 28rpx; margin-bottom: 20rpx; }
.icon { width: 120rpx; height: 120rpx; border-radius: 50%; background: #c6efcf; }
.right { flex: 1; margin: 0 20rpx; }
.top { display: flex; justify-content: space-between; align-items: baseline; }
.title { font-size: 34rpx; font-weight: 700; color: #111; }
.time { font-size: 24rpx; color: #9aa29a; }
.content-text { margin-top: 12rpx; font-size: 28rpx; color: #5a6a5a; }
.next { width: 24rpx; height: 24rpx; }
.empty { margin-top: 120rpx; text-align: center; color: #9aa29a; }
.empty-img { width: 280rpx; height: 200rpx; margin: 0 auto 12rpx; }
.empty-text { font-size: 26rpx; }
.booking-container { background: #f7fbf8; min-height: 100vh; }
.content { padding: 16rpx 24rpx 40rpx; }
.header-actions { display: flex; justify-content: flex-end; margin-bottom: 16rpx; }
.mark-all { font-size: 24rpx; padding: 8rpx 16rpx; }
.booking-item { display: flex; background: #fff; border-radius: 16rpx; padding: 24rpx; margin-bottom: 20rpx; }
.avatar { width: 96rpx; height: 96rpx; border-radius: 50%; background: #eee; flex-shrink: 0; }
.meta { flex: 1; margin-left: 20rpx; }
.row1 { display: flex; flex-wrap: wrap; align-items: baseline; gap: 8rpx; }
.name { font-size: 30rpx; font-weight: 600; color: #222; }
.row-bottom { margin-top: 12rpx; display: flex; justify-content: space-between; align-items: center; }
.time { font-size: 24rpx; color: #9aa29a; }
.empty { margin-top: 120rpx; text-align: center; color: #9aa29a; }
.empty-img { width: 280rpx; height: 200rpx; margin: 0 auto 12rpx; }
.empty-text { font-size: 26rpx; }

