/* pages/parent/profile/profile.wxss */
/* 复用学生端新样式（教师端风格） */
@import "../../student/profile/profile.wxss";

/* 家长标签样式覆盖：底色 rgba(128, 102, 255, 1) */
.parent-tag {
  background: rgba(128, 102, 255, 1);
  color: #fff;
}
.parent-tag.fixed { min-width: 88rpx; text-align: center; }

/* 余额概览模块样式，复用教师端结构命名 */
.balance-overview {
  position: relative;
  z-index: 1;
  margin: 0 40rpx 24rpx;
  border-radius: 24rpx;
  overflow: hidden;
}
.balance-overview .income-background {
  width: 100%;
  height: 200rpx;
}
.balance-overview .income-content {
  position: absolute;
  left: 0; right: 0; top: 0; bottom: 0;
  padding: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  color: #fff;
}
.balance-overview .income-header { display: flex; align-items: center; justify-content: space-between; margin-bottom: 8rpx; }
.balance-overview .income-title { font-size: 28rpx; opacity: 0.95; }
.balance-overview .view-more { display: flex; align-items: center; gap: 8rpx; }
.balance-overview .next-icon { width: 24rpx; height: 24rpx;  }
.balance-overview .income-stats { display: flex; gap: 48rpx; margin-top: 8rpx; }
.balance-overview .income-item { display: flex; flex-direction: column; }
.balance-overview .income-amount { font-size: 44rpx; font-weight: 700; }
.balance-overview .income-amount.total { opacity: 0.95; }
.balance-overview .income-label { font-size: 22rpx; opacity: 0.9; }

/* 居中余额 */
.balance-overview .income-center { display: flex; justify-content: center; align-items: center; padding: 12rpx 0; }
.balance-overview .income-center-amount { font-size: 48rpx; font-weight: 600; letter-spacing: 1rpx; }