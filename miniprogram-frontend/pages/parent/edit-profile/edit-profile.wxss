/* 家长编辑资料样式（拷贝学生端并删减不需要项） */
.edit-profile-container { min-height: 100vh; background-color: #f8f8f8; padding-bottom: 40rpx; }
.content-container { min-height: 100vh; }
.profile-form { background-color: #fff; margin: 32rpx; border-radius: 16rpx; overflow: hidden; }
.form-item { display:flex; align-items:center; padding: 32rpx; min-height: 80rpx; }
.form-item:last-child { border-bottom: none; }
.form-label { font-size: 32rpx; color: #333; width: 180rpx; flex-shrink: 0; }
.form-input { flex: 1; font-size: 32rpx; color: #333; text-align: right; }
.form-input::placeholder { color: #999; }
.form-value-container { flex: 1; display:flex; align-items:center; justify-content:flex-end; }
.form-value { font-size: 32rpx; color: #333; margin-right: 16rpx; }
.arrow-icon { width: 28rpx; height: 28rpx; opacity: .6; }
.avatar-item { position: relative; }
.avatar-container { display:flex; align-items:center; gap: 16rpx; }
.avatar-image { width: 90rpx; height: 90rpx; border-radius: 50%; background-color: #f0f0f0; }

/* 简介 */
.intro-item { flex-direction: column; align-items: flex-start; padding-top: 32rpx; padding-bottom: 32rpx; }
.form-textarea { width: 100%; font-size: 32rpx; color: #333; border: 2rpx solid #e0e0e0; border-radius: 12rpx; padding: 24rpx; min-height: 200rpx; line-height: 1.5; box-sizing: border-box; }
.form-textarea::placeholder { color: #999; }

/* 保存按钮 */
.save-btn-container { padding: 32rpx; }
.save-btn { width: 100%; background: linear-gradient(135deg, #4CAF50, #45a049); border-radius: 48rpx; color: #fff; font-size: 32rpx; font-weight: 600; border: none; box-shadow: 0 8rpx 24rpx rgba(76, 175, 80, 0.3); }
.save-btn:active { transform: translateY(2rpx); box-shadow: 0 4rpx 12rpx rgba(76, 175, 80, 0.3); }

/* 弹窗 */
.modal-overlay{ position:fixed; top:0; left:0; right:0; bottom:0; background-color: rgba(0,0,0,0.5); display:flex; align-items:center; justify-content:center; z-index: 9999; opacity:0; visibility:hidden; transition: all .3s ease }
.modal-overlay.show{ opacity:1; visibility:visible }
.address-modal{ width: 600rpx; background:#fff; border-radius: 16rpx; padding:0; transform: scale(.8); transition: transform .3s ease }
.modal-overlay.show .address-modal{ transform: scale(1) }
.modal-header{ display:flex; align-items:center; justify-content:space-between; padding: 32rpx; border-bottom: 1rpx solid #f0f0f0 }
.modal-title{ font-size:32rpx; font-weight:600; color:#333 }
.modal-close{ font-size:40rpx; color:#999; line-height:1 }
.modal-content{ padding: 32rpx }
.address-textarea{ width:100%; min-height:200rpx; font-size:32rpx; color:#333; border:2rpx solid #e0e0e0; border-radius:12rpx; padding:24rpx; box-sizing:border-box; line-height:1.5 }
.modal-actions{ display:flex; gap:24rpx; padding: 32rpx; border-top:1rpx solid #f0f0f0 }
.modal-btn{ flex:1; height:80rpx; border-radius:40rpx; font-size:32rpx; border:none }
.cancel-btn{ background:#f5f5f5; color:#666 }
.confirm-btn{ background:#54B247; color:#fff }
picker{ width: 100%; }

