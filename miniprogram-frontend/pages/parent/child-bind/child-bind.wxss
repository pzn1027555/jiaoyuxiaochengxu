.bind-page{ background: linear-gradient(180deg, rgba(84,178,71,1) 0%, rgba(137,212,126,1) 100%); min-height:100vh ;
  position: absolute;
  top: 0;}
.card{ margin: 240rpx 40rpx 20rpx; background:#fff; border-radius:24rpx; padding: 140rpx 40rpx; text-align:center ;    min-height: 240rpx;}
.avatar{ width: 180rpx; height: 180rpx; border-radius: 50%; position:absolute; top:130rpx; left:50%; transform: translateX(-50%); border:8rpx solid #fff }
.students{ margin: 20rpx 40rpx; background:#fff; border-radius: 16rpx; padding: 20rpx }
.s-item{ display: flex; align-items: center; padding: 16rpx 0; border-bottom: 1rpx solid #f0f0f0 }
.s-item:last-child{ border-bottom: none }
.s-avatar{ width: 80rpx; height: 80rpx; border-radius: 50%; background: #eee; margin-right: 16rpx }
.s-name{ font-size: 28rpx; color:#333 }
.s-phone{ font-size: 24rpx; color:#888; margin-top: 4rpx }
.code-title{ color:#333; font-size:36rpx; margin-top:40rpx }
.code{ color:#FF6B6B; font-size:64rpx; font-weight:800; letter-spacing: 8rpx; margin-top:20rpx }
.hint{ margin: 0 40rpx; color:#fff; opacity:.9 }
.input-card{ margin: 40rpx 40rpx 60rpx; background:#fff; border-radius: 16rpx; padding: 24rpx }
.input-title{ font-size: 28rpx; color:#333; margin-bottom: 16rpx }
.code-input{ border: 1rpx solid #eee; border-radius: 8rpx; padding: 16rpx; font-size: 28rpx }
.submit-btn{ margin-top: 24rpx; background:#4CAF50; color:#fff ;border-radius: 24rpx;}
