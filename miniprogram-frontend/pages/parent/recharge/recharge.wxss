/* pages/parent/recharge/recharge.wxss */
.page-container { min-height: 100vh; background: #F7FFF3; }
.content { padding: 24rpx 32rpx; }

.form-section { margin-top: 24rpx; border-radius: 24rpx; padding: 24rpx 24rpx 32rpx; }
.field-label { font-size: 30rpx; color: #111; margin-bottom: 16rpx; }
.amount-input { display: flex; align-items: center; border-bottom: 1rpx solid #eee; padding: 12rpx 0; }
.currency { font-size: 40rpx; color: #999; margin-right: 12rpx; }
.input { flex: 1; font-size: 36rpx; color: #333; }

.pay-section { margin-top: 24rpx;  border-radius: 24rpx; padding: 24rpx; }
.pay-title { font-size: 28rpx; color: #111; font-weight: 600; margin-bottom: 16rpx; }
.pay-item { display: flex; align-items: center; padding: 20rpx 8rpx; }
.wx-icon { width: 44rpx; height: 44rpx; margin-right: 20rpx; }
.wx-icon.right { margin-left: auto; width: 36rpx; height: 36rpx; }
.pay-name { font-size: 30rpx; color: #333; }
/* 移除自绘radio，改用图片与 checkout 一致 */

.footer { position: fixed; left: 0; right: 0; bottom: 0; padding: 24rpx 24rpx calc(24rpx + env(safe-area-inset-bottom)); background: #fff; }
.submit-btn { width: 100%; height: 96rpx; background: #4CAF50; color: #fff; border: none; border-radius: 999rpx; font-size: 36rpx; font-weight: 600; }
.submit-btn::after { border: none; }

.input{
  background: unset;
  border: unset;
}
