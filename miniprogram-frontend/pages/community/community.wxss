.community-page { 
  padding-bottom: 160rpx; 
  position: relative; 
  min-height: 100vh;
  background: linear-gradient(0, #ffffff, #F5FFF2);
}

/* 背景图样式 */
.bg-image { 
  position: absolute; 
  left: 0; 
  top: 0; 
  width: 100%; 
  max-height: 430rpx;
  z-index: 0; 
  opacity: 0.8;
}
.header, .category-bar, .post-list { position: relative; z-index: 1; }

/* 头部 */
.header { 
  padding: 24rpx; 
  /* background: #ffffff !important;  */
  /* background-color: #ffffff !important; */
  box-shadow: 0 6rpx 24rpx rgba(0,0,0,.06); 
  position: relative;
  z-index: 2;
}
.search-bar { }
.search-input-wrap{ display:flex; align-items:center; background:#fff; border-radius: 28rpx; padding: 18rpx 22rpx;     border: 1rpx solid #54B247; width: calc(100%-48rpx); }
.search-input{ flex:1; font-size:28rpx; color:#333 }
.search-input-wrap .icon-img{ width:32rpx; height:32rpx; margin-right:12rpx }

.stats { margin-top: 16rpx; display: flex; align-items: center; justify-content: space-around; background: #fafafa; border-radius: 16rpx; padding: 16rpx 0; }
.stat-item { flex: 1; text-align: center; }
.stat-item .num { font-size: 32rpx; font-weight: 600; color: #111; display: block; }
.stat-item .label { font-size: 22rpx; color: #888; display: block; margin-top: 6rpx; }
.divider { width: 1rpx; height: 44rpx; background: #eaeaea; }

/* 分类横滑 */
/* 旧分类条已移除 */

/* 列表 */
.post-list { padding: 20rpx 24rpx; }
.post-card { 
  /* background: #ffffff !important;  */
  /* background-color: #ffffff !important; */
  border-radius: 16rpx; 
  padding: 24rpx; 
  /* box-shadow: 0 6rpx 24rpx rgba(0,0,0,.08);  */
  margin-bottom: 24rpx; 
  /* border: 1rpx solid #e0e0e0; */
  position: relative;
  z-index: 2;
}
.post-header { display: flex; align-items: center; }
.avatar { width: 72rpx; height: 72rpx; border-radius: 50%; background: #f0f0f0; }
.meta { flex: 1; margin: 0 16rpx; }
.name-row{ display:flex; align-items:center; gap:8rpx }
.author { font-size: 28rpx; color: #111; font-weight: 600; }
.gender{ width:26rpx; height:26rpx }
.sub { font-size: 22rpx; color: #999; margin-top: 6rpx; }
.post-text{ font-size: 28rpx; color: #333; margin-top: 10rpx; line-height: 1.7; }
.post-text.clamp{ display: -webkit-box; -webkit-line-clamp: 2; -webkit-box-orient: vertical; overflow: hidden; }
.post-text.measure{ position: absolute; left: -9999rpx; top: -9999rpx; opacity: 0; width: 100%; }
.show-more{ color:#54B247; font-size:26rpx; margin-top: 8rpx }
.media-row{ display:flex; gap:8rpx; margin-top: 8rpx }
.media-img{ width: 32%; height: 220rpx; border-radius: 8rpx; background:#eee }
.media-video{ width: 32%; height: 220rpx; border-radius: 8rpx; background:#000 }
.post-footer { display: flex; align-items: center; justify-content: space-between; color: #666; margin-top: 18rpx; }
.time{ color:#889a88; font-size:22rpx }
.actions{ display:flex; gap:24rpx }
.small-icon { width: 28rpx; height: 28rpx; margin-right: 8rpx; }
.count { display: inline-flex; align-items: center; font-size: 24rpx; }
.act{ display:inline-flex; align-items:center; color:#667; }
.act.liked{ color:#54B247; }

/* 骨架与空态 */
.skeleton { background: #ffffff; border-radius: 16rpx; padding: 24rpx; box-shadow: 0 6rpx 24rpx rgba(0,0,0,.03); margin-bottom: 24rpx; }
.skeleton-title { width: 60%; height: 28rpx; background: #f0f0f0; border-radius: 8rpx; }
.skeleton-subtitle { width: 90%; height: 24rpx; background: #f2f2f2; border-radius: 8rpx; margin-top: 16rpx; }
.empty { padding: 160rpx 0; text-align: center; color: #999; }
.empty-img { width: 220rpx; height: 220rpx; margin-bottom: 16rpx; }
.empty-text { font-size: 26rpx; color: #888; }

.load-more, .load-end { text-align: center; color: #888; padding: 24rpx 0; }

.fab-area{ position: fixed; left:0; top:0; right:0; bottom:0; width:100%; height:100%; z-index: 10; pointer-events: none; }
.floating-create{ width: 120rpx; height: 140rpx; display:flex; flex-direction:column; align-items:center; top: unset;bottom: 220rpx;left: unset;right: 20rpx; pointer-events: auto; z-index: 11; }
.circle{ width: 120rpx; height: 120rpx; border-radius: 50%; background:#54B247; display:flex; align-items:center; justify-content:center; box-shadow: 0 10rpx 20rpx rgba(84,178,71,.35) ;flex-direction: column;}
.fatie{ width: 46rpx; height: 46rpx; margin-top: 24rpx;}
.create-text{ color:#fff; font-size: 24rpx; }

/* 资源下载块 */
.resource-box{ 
  margin: 16rpx 24rpx; 
  padding: 16rpx; 
  background: #ffffff !important; 
  background-color: #ffffff !important;
  border-radius: 12rpx; 
  box-shadow: 0 6rpx 16rpx rgba(0,0,0,.12);
  border: 1rpx solid #e0e0e0;
  position: relative;
  z-index: 2;
}
.rb-header{ display:flex; justify-content:space-between; align-items:center; margin-bottom: 12rpx }
.left-bar{ width:6rpx; height:28rpx; background:#54B247; border-radius:3rpx; margin-right: 12rpx; display:inline-block }
.rb-title{ color:#54B247; font-weight:700 }
.rb-more{ color:#889a88; font-size:24rpx; display:flex; align-items:center }
.more-icon{ width: 20rpx; height: 20rpx; margin-left: 6rpx }
.rb-item{ display:flex; align-items:center; justify-content:space-between; padding: 10rpx 0; border-top:1rpx dashed #eaeaea }
.rb-item:first-child{ border-top:none }
.rb-text{ color:#183314; font-size:28rpx; width: 80%; overflow:hidden; white-space:nowrap; text-overflow:ellipsis }
.dl-icon{ width: 36rpx; height: 36rpx }

/* 老师动态 */
.teacher-feed{ 
  padding: 8rpx 0 0; 
  /* background: rgba(255, 255, 255, 0.85); */
  margin: 8rpx 24rpx 24rpx 24rpx;
  border-radius: 12rpx;
  position: relative;
  z-index: 2;
}
.tf-title{ margin: 0 24rpx 8rpx; color:#183314; font-weight:700; display:flex; align-items:center; gap:12rpx }
.tf-scroll{ white-space:nowrap; padding: 0 24rpx }
.tf-card{ display:inline-flex; width: 260rpx; flex-direction:column; margin-right: 12rpx }
.tf-thumb{ width:100%; height:160rpx; border-radius: 8rpx; background:#eee }
.tf-name{ font-size:24rpx; color:#333; margin-top:6rpx; overflow:hidden; text-overflow:ellipsis; white-space:nowrap }
.tf-empty{ padding: 16rpx 24rpx; color:#889a88; }

/* 科目与二级分类 */
.subject-tabs{ 
  margin: 8rpx 24rpx; 
  white-space:nowrap; 
  border-bottom:1rpx solid #e6eee6;
  /* background: rgba(255, 255, 255, 0.9); */
  position: relative;
  z-index: 2;
  border-radius: 8rpx 8rpx 0 0;
}
.tabs-track{ display:flex; gap: 28rpx; padding: 12rpx 4rpx }
.tab{ color:#5f8f5d; padding: 8rpx 0; font-size:28rpx; position:relative }
.tab.active{ color:#54B247; font-weight:700 }
.tab.active::after{ content:''; position:absolute; left:0; right:0; bottom:-12rpx; height:6rpx; background:#54B247; border-radius:999rpx }
.sub-tabs{ 
  display:flex; 
  gap:24rpx; 
  padding: 8rpx 24rpx; 
  justify-content: space-between;
  /* background: rgba(255, 255, 255, 0.9); */
  position: relative;
  z-index: 2;
}
.sub{ color:#7c7c7c; padding: 4rpx 0rpx; border-radius:999px; font-size:26rpx }
.sub.active{ background:#54B247; color:#fff }
.sub-btn{
  padding: 8rpx 16rpx;
  margin: 0 40rpx;
  min-width: 100rpx;
  text-align: center;
}
