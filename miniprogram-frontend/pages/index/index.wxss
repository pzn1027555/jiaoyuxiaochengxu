/* pages/index/index.wxss */

.index-container { min-height: 100vh; background: #fcfffb; padding-bottom: 140rpx; }

.search-bar { padding: 24rpx; }
.search-input-wrap { display:flex; align-items:center; background:#fff; border-radius: 28rpx; padding: 18rpx 22rpx; box-shadow: 0 6rpx 16rpx rgba(0,0,0,0.04); }
.search-icon { color:#9eb79a; margin-right: 12rpx; }
.search-input { flex:1; font-size:28rpx; color:#333; }
.search-input-wrap .icon-img{ width:32rpx; height:32rpx; margin-right:12rpx }

.hero-banner { margin: 0 24rpx 24rpx; height: 220rpx; background: linear-gradient(135deg, #6fd17f, #4CAF50); border-radius: 20rpx; display:flex; align-items:center; justify-content:center; color:#fff; }
.hero-banner::after{ content: '主视觉切片占位'; opacity:.6; }

.subject-tabs { margin: 0 24rpx; white-space:nowrap; }
.tabs-track { display:flex; gap: 32rpx; padding: 12rpx 4rpx; }
.tab { color:#5f8f5d; padding: 8rpx 16rpx; font-size:28rpx; border-radius:999px; background:#eef7ee }
.tab.active { font-weight:700; background:#54B247; color:#fff }

.filter-bar { display:flex; gap: 16rpx; padding: 16rpx 24rpx; color:#183314; }
.filter-item { background:#fff; border-radius: 30rpx; padding: 14rpx 22rpx; box-shadow: 0 6rpx 14rpx rgba(0,0,0,0.04); font-size: 26rpx; }
.clear-x{ margin-left:10rpx; color:#9aa89a }

.teacher-list { padding: 0 24rpx; }
.teacher-card { border-radius: 20rpx; padding: 24rpx; margin-bottom: 20rpx; }
.card-row{ display:flex; }
.avatar { width: 200rpx; height:200rpx; border-radius: 12rpx; margin-right: 18rpx; background:#e9f4e8; flex-shrink:0 }
.content-right{ flex:1; display:flex; flex-direction:column }
.title-row { display:flex; align-items:center; gap: 12rpx; }
.name { font-size: 36rpx; font-weight: 700; color:#183314 }
.gender-icon{ width: 26rpx; height: 26rpx; margin-left: 6rpx; }
.district{ margin-left:auto; color:#597259; font-size:24rpx }
.tag-row { display:flex; gap: 10rpx; margin-top: 6rpx }
.badge { background:#e6f6e6; color:#2f8b3c; padding: 6rpx 12rpx; border-radius: 20rpx; font-size: 22rpx }
.card-body { margin-top: 10rpx; color:#597259; font-size: 26rpx }
.desc{ color:#6a806a; font-size:24rpx; margin-top:6rpx; overflow:hidden; display:-webkit-box; -webkit-line-clamp:2; -webkit-box-orient:vertical; }
.subjects { margin: 10rpx 0 }
.subjects-strong{ font-weight:700; color:#183314 }
.price-row { display:flex; justify-content:flex-start; align-items:center; margin-top: 12rpx }
.price { font-size: 28rpx; color:#597259 }
.price-num{ color:#ff6655; font-size:36rpx; font-weight:700 }
.price-unit{ color:#597259 }

/* 轮播图 */
.banner-section {
  margin-bottom: 20rpx;
}

.banner-swiper {
  height: 300rpx;
}

.banner-image {
  width: 100%;
  height: 100%;
}

/* 快捷功能区 */
.quick-actions {
  background: #fff;
  margin: 0 20rpx 20rpx;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
}

.action-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.action-item {
  width: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 12rpx;
}

.action-icon image {
  width: 100%;
  height: 100%;
}

.action-text {
  font-size: 24rpx;
  color: #666;
  text-align: center;
}

/* 角色内容区 */
.role-content {
  margin: 0 20rpx 20rpx;
}

.section-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #333;
}

.more-text {
  font-size: 24rpx;
  color: #4CAF50;
}

/* 学生内容 */
.course-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.course-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.course-item:last-child {
  border-bottom: none;
}

.course-cover {
  width: 120rpx;
  height: 90rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.course-info {
  flex: 1;
}

.course-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.course-teacher {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.course-progress {
  display: flex;
  align-items: center;
}

.progress-bar {
  flex: 1;
  height: 4rpx;
  background: #f0f0f0;
  border-radius: 2rpx;
  margin-right: 12rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #4CAF50;
  border-radius: 2rpx;
  transition: width 0.3s ease;
}

.progress-text {
  font-size: 20rpx;
  color: #4CAF50;
  min-width: 60rpx;
}

/* 家长内容 */
.children-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.child-item {
  display: flex;
  align-items: center;
  padding: 24rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.child-item:last-child {
  border-bottom: none;
}

.child-avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.child-info {
  flex: 1;
}

.child-name {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.child-grade {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
}

.study-stats {
  display: flex;
  flex-direction: column;
}

.stats-item {
  font-size: 22rpx;
  color: #999;
  margin-bottom: 4rpx;
}

.child-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.child-status.online {
  background: #e8f5e8;
  color: #4CAF50;
}

.child-status.offline {
  background: #f5f5f5;
  color: #999;
}

/* 教师内容 */
.teaching-stats {
  display: flex;
  margin-bottom: 20rpx;
}

.stat-card {
  flex: 1;
  background: #fff;
  border-radius: 16rpx;
  padding: 30rpx 20rpx;
  text-align: center;
  margin-right: 10rpx;
}

.stat-card:last-child {
  margin-right: 0;
}

.stat-number {
  font-size: 48rpx;
  font-weight: 600;
  color: #4CAF50;
  display: block;
  margin-bottom: 8rpx;
}

.stat-label {
  font-size: 24rpx;
  color: #666;
}

.recent-classes {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.class-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.class-item:last-child {
  border-bottom: none;
}

.class-time {
  margin-right: 20rpx;
  text-align: center;
  min-width: 100rpx;
}

.time-label {
  font-size: 20rpx;
  color: #999;
  display: block;
}

.time-value {
  font-size: 24rpx;
  font-weight: 500;
  color: #333;
}

.class-info {
  flex: 1;
}

.class-title {
  font-size: 28rpx;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.class-student {
  font-size: 24rpx;
  color: #666;
}

.class-status {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 20rpx;
}

.class-status.pending {
  background: #fff3cd;
  color: #856404;
}

.class-status.ongoing {
  background: #e8f5e8;
  color: #4CAF50;
}

.class-status.completed {
  background: #f5f5f5;
  color: #999;
}

/* 推荐内容 */
.recommend-section {
  margin: 0 20rpx;
}

.recommend-list {
  background: #fff;
  border-radius: 16rpx;
  overflow: hidden;
}

.recommend-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.recommend-item:last-child {
  border-bottom: none;
}

.recommend-image {
  width: 120rpx;
  height: 90rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.recommend-content {
  flex: 1;
}

.recommend-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #333;
  display: block;
  margin-bottom: 8rpx;
}

.recommend-desc {
  font-size: 24rpx;
  color: #666;
  display: block;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.recommend-tags {
  display: flex;
  flex-wrap: wrap;
}

.tag {
  font-size: 20rpx;
  color: #4CAF50;
  background: #e8f5e8;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
  margin-right: 8rpx;
  margin-bottom: 4rpx;
}

/* 加载更多 */
.loading-more { text-align:center; padding: 30rpx; color:#9aa89a; font-size:24rpx }